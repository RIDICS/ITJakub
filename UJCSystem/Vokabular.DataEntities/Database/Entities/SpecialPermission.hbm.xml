<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="Vokabular.DataEntities" namespace="Vokabular.DataEntities.Database.Entities" xmlns="urn:nhibernate-mapping-2.2">
  <class name="SpecialPermission" table="[SpecialPermission]">
    
    <id name="Id" column="Id">
      <generator class="identity" />
    </id>

    <discriminator column="PermissionType"
               not-null="true"
               type="System.String" />

    <property name="PermissionCategorization" not-null="true" />

    <bag name="UserGroups" table="SpecialPermission_UserGroup" lazy="true">
      <key column="[SpecialPermission]" />
      <many-to-many class="UserGroup" column="[UserGroup]" />
    </bag>
    
    <subclass name="UploadBookPermission"
      discriminator-value="UploadBook">

      <property name="CanUploadBook" not-null="true" />
      
    </subclass>
    
    <subclass name="ManagePermissionsPermission"
      discriminator-value="ManagePermissions">

      <property name="CanManagePermissions" not-null="true" />
      
    </subclass>
    
    <subclass name="NewsPermission"
      discriminator-value="News">

      <property name="CanAddNews" not-null="true" />
      
    </subclass>
    
    <subclass name="FeedbackPermission"
      discriminator-value="Feedback">

      <property name="CanManageFeedbacks" not-null="true" />
      
    </subclass>
    
    <subclass name="CardFilePermission"
      discriminator-value="CardFile">

      <property name="CanReadCardFile" not-null="true" />
      
      <property name="CardFileId" not-null="true" />
      
      <property name="CardFileName" not-null="true" />
      
    </subclass>    
    
    <subclass name="AutoImportBookTypePermission"
      discriminator-value="Autoimport">

      <property name="AutoImportIsAllowed" column="AutoImportAllowed" not-null="true" />

      <many-to-one name="BookType" class="BookType" column="AutoimportBookType" lazy="false" />
      
    </subclass>
    
    <subclass name="ReadLemmatizationPermission"
      discriminator-value="ReadLemmatization">

      <property name="CanReadLemmatization" not-null="true" />
      
    </subclass>
    
    <subclass name="EditLemmatizationPermission"
      discriminator-value="EditLemmatization">

      <property name="CanEditLemmatization" not-null="true" />
      
    </subclass>
    
    <subclass name="DerivateLemmatizationPermission"
      discriminator-value="DerivateLemmatization">

      <property name="CanDerivateLemmatization" not-null="true" />
      
    </subclass>
    
    <subclass name="EditionPrintTextPermission" discriminator-value="EditionPrintText">

      <property name="CanEditionPrintText" not-null="true" />
      
    </subclass>

    <subclass name="EditStaticTextPermission" discriminator-value="EditStaticText">

      <property name="CanEditStaticText" not-null="true" />

    </subclass>

    <subclass name="ManageRepositoryImportPermission" discriminator-value="ManageRepositoryImport">

      <property name="CanManageRepositoryImport" not-null="true" />

    </subclass>

    <subclass name="ReadExternalProjectPermission" discriminator-value="ReadExternalProject">

      <property name="CanReadExternalProject" not-null="true" />

    </subclass>
    
  </class>
</hibernate-mapping>