<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping assembly="ITJakub.MobileApps.DataEntities"
                   namespace="ITJakub.MobileApps.DataEntities.Database.Entities" xmlns="urn:nhibernate-mapping-2.2">
  <class name="Group" table="[Group]" lazy="false">

    <id name="Id" column="Id">
      <generator class="identity" />
    </id>

    <many-to-one name="Author">
      <column name="AuthorId" sql-type="bigint" not-null="true" />
    </many-to-one>

    <property name="Name">
      <column name="Name" sql-type="varchar" not-null="true" />
    </property>

    <many-to-one name="Task">
      <column name="TaskId" sql-type="bigint" />
    </many-to-one>

    <property name="CreateTime">
      <column name="CreateTime" sql-type="datetime" not-null="true" />
    </property>

    <property name="EnterCode">
      <column name="EnterCode" sql-type="varchar" not-null="true" />
    </property>

    <property name="Evaluation">
      <column name="Evaluation" sql-type="varchar" />
    </property>

    <property name="State">
      <column name="State" sql-type="smallint" not-null="true" />
    </property>

    <bag name="SynchronizedObjects" lazy="true" inverse="true" cascade="all-delete-orphan">
      <key column="GroupId" />
      <one-to-many class="SynchronizedObjectBase" />
    </bag>

    <bag name="Members" table="UserToGroup" cascade="save-update" lazy="true">
      <key column="GroupId" />
      <many-to-many class="User" column="UserId" />
    </bag>

  </class>
</hibernate-mapping>