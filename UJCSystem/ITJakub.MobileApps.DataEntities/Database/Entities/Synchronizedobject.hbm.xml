<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="ITJakub.MobileApps.DataEntities" namespace="ITJakub.MobileApps.DataEntities.Database.Entities" xmlns="urn:nhibernate-mapping-2.2">
  <class name="SynchronizedObjectBase" table="[SynchronizedObject]" lazy="true" >
    <id name="Id" column="Id">
      <generator class="identity" />
    </id>
    <discriminator>
      <column name="SynchronizedObjectType" sql-type="tinyint" />
    </discriminator>
    
    <many-to-one name="Author">
      <column name="AuthorId" sql-type="bigint" not-null="true" />
    </many-to-one>
    
    <many-to-one name="Group">
      <column name="GroupId" sql-type="bigint" not-null="true" />
    </many-to-one>
    
    <many-to-one name="Application">
      <column name="ApplicationId" sql-type="bigint" not-null="true" />
    </many-to-one>
    
    <property name="CreateTime" type="timestamp">
      <column name="CreateTime" sql-type="datetime" not-null="true" />
    </property>
    
    <property name="ObjectType">
      <column name="ObjectType" sql-type="varchar" not-null="false" />
    </property>
      
    
    <subclass discriminator-value="1" name="SingleSynchronizedObject">
      <property name="ObjectValue" />
    </subclass>

    <subclass discriminator-value="0" name="SynchronizedObject">
      <property name="ObjectExternalId" />
    </subclass>
  
  </class>
</hibernate-mapping>