<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping assembly="ITJakub.MobileApps.DataEntities"
                   namespace="ITJakub.MobileApps.DataEntities.Database.Entities" xmlns="urn:nhibernate-mapping-2.2">
  <class name="User" table="[User]" lazy="true">

    <id name="Id" column="Id">
      <generator class="identity" />
    </id>

  
    <property name="FirstName">
      <column name="FirstName" sql-type="varchar" not-null="true" />
    </property>

    <property name="LastName">
      <column name="LastName" sql-type="varchar" not-null="true" />
    </property>

    <property name="Email">
      <column name="Email" sql-type="varchar" not-null="true" unique="true" />
    </property>

    <property name="AvatarUrl">
      <column name="AvatarUrl" sql-type="varchar" not-null="false" />
    </property>

    <property name="AuthenticationProvider">
      <column name="AuthenticationProvider" not-null="true" sql-type="tinyint" unique="true" />
    </property>

    <property name="AuthenticationProviderToken">
      <column name="AuthenticationProviderToken" sql-type="varchar" />
    </property>

    <property name="CommunicationToken">
      <column name="CommunicationToken" sql-type="varchar" />
    </property>

    <property name="CommunicationTokenCreateTime">
      <column name="CommunicationTokenCreateTime" sql-type="datetime" />
    </property>

    <property name="CreateTime">
      <column name="CreateTime" sql-type="datetime" not-null="true" />
    </property>

    <property name="PasswordHash">
      <column name="PasswordHash" sql-type="varchar" />
    </property>

    <property name="PasswordSalt">
      <column name="Salt" sql-type="varchar" />
    </property>

    <bag name="CreatedGroups" lazy="true">
      <key column="AuthorId" />
      <one-to-many class="Group" />
    </bag>

    <bag name="CreatedSynchronizedObjects" lazy="true">
      <key column="AuthorId" />
      <one-to-many class="SynchronizedObjectBase" />
    </bag>

    <bag name="CreatedTasks" lazy="true">
      <key column="AuthorId" />
      <one-to-many class="Task" />
    </bag>

    <bag name="MemberOfGroups" table="UserToGroup" inverse="true" lazy="true">
      <key column="UserId" />
      <many-to-many class="Group" column="GroupId" />
    </bag>

    <many-to-one name="Institution" lazy="proxy">
      <column name="InstitutionId" sql-type="bigint" not-null="false" />
    </many-to-one>

  </class>
</hibernate-mapping>