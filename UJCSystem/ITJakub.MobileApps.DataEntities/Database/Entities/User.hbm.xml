<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="ITJakub.MobileApps.DataEntities" namespace="ITJakub.MobileApps.DataEntities.Database.Entities" xmlns="urn:nhibernate-mapping-2.2">
  <class name="User" table="User" lazy="true" >
    <id name="Id" column="Id">
      <generator class="identity" />
    </id>
    <many-to-one name="Role">
      <column name="RoleId" sql-type="tinyint" not-null="true" />
    </many-to-one>
    <property name="FirstName">
      <column name="FirstName" sql-type="varchar" not-null="true" />
    </property>
    <property name="LastName">
      <column name="LastName" sql-type="varchar" not-null="true" />
    </property>
    <property name="Email">
      <column name="Email" sql-type="varchar" not-null="true" />
    </property>
    <bag name="SynchronizedObjects">
      <key column="AuthorId" />
      <one-to-many class="SynchronizedObject" />
    </bag>
    <bag name="Tasks">
      <key column="AuthorId" />
      <one-to-many class="Task" />
    </bag>
    <bag name="Groups">
      <key column="UserId" />
      <one-to-many class="UserToGroup" />
    </bag>
    <bag name="UserToInstitution">
      <key column="UserId" />
      <one-to-many class="UserToInstitution" />
    </bag>
  </class>
</hibernate-mapping>