@using ITJakub.MVCWebLayer.Services

<div class="row-fluid">
    <div class="span12 well text-center">
        <form method="get" action="@Url.RouteUrl("SourcesDetailSearch", new{ searchTerm = "" })" id="sources-search-form">
            <div class="input-append text-center">
                @Html.TextBox("searchTerm", string.Empty, new { @class = "input-xxlarge" })
