@using ITJakub.MVCWebLayer.Services
@model ITJakub.MVCWebLayer.ViewModels.SearchViewModel
<div class="row-fluid">
    <div class="span12">
        <div class="advanced-search-wrapper">
    @using (Html.BeginForm("Search", "Search", FormMethod.Get, new { @class = "search-form" }))
    {
                <div class="input-append search-inputs text-center">
                    @Html.TextBoxFor(a => a.SearchTerm, new { id = "search-term", @class = "input-xxlarge search-term" })
