                    <button class="btn show-advanced-search" type="button">Upřesnit <span class="caret"></span></button>
                </div>
        <div class="advanced-search">
            <div class="text-left">
                <strong>Prohledávaná díla: </strong>
                <div class="searched-books">
                    <span class="muted">Aktivní prohledávání ve všech dostupných dílech</span>
                </div>
            </div>
            <br/>
            <h4>Vyberte prohledávaná díla</h4>
            <div class="row-fluid">
                <div id="search-categories-tree" class="span12 categories" data-categories-url="@Url.RouteUrl("GetCategoryChildren", new { categoryId = "" })"></div>
            </div>
        </div>
    }
</div>
