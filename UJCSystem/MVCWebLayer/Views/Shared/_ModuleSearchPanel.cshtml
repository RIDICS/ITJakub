@using Ujc.Naki.MVCWebLayer.Services

<div id="search-panel" style="margin-top:1em;">
    @using (Html.BeginForm("Index", "Modules", FormMethod.Get))
    {
        @Html.TextBox("searchTerm", string.Empty, new { id = "search-term" })
        <div style="text-align:left; margin-top:1em">
            @("Zobrazení:")<br />
            @Html.RadioButton("view", "odstavce", true) @Html.Label("odstavce")<br />
            @Html.RadioButton("view", "kontext") @Html.Label("kontext")<br />
        </div>
        <input type="submit" id="search-submit" value="Vyhledat" />
    }
</div>