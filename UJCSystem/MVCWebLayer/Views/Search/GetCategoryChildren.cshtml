@model ITJakub.MVCWebLayer.ViewModels.CategoriesViewModel 


@if (Model != null) 
{
    <ul class="nav">
        <li data-category-id="0">
<ul class="nav">
    @foreach (var category in Model.Children)
    {
        <li data-category-id="@category.Id">
            <i class="icon-chevron-right"></i>
            <label class="checkbox">
                <input type="checkbox" name="SearchPart" value="@category.Id" id="@category.Id" /><span>@category.Name</span>
            </label>
        </li>
    }
</ul>


    