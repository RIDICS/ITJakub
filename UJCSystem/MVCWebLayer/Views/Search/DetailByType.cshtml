@using System.Linq
@model ITJakub.MVCWebLayer.ViewModels.SearchKeyWordsViewModel
           
@if (Model.Results.Count > 0)
{
    <div id="dictionary-results-panel">
        @foreach (var result in Model.Results)
        {   
            <blockquote>
                <p>
                    @(new HtmlString(result.HtmlContext))
                </p>
                
                <small>
                    @if (string.IsNullOrEmpty(result.Author))
                    {
                        <a href="@Url.RouteUrl("SourcesDetail", new{ id = result.Id })" class="muted"><cite title="@result.Title">@result.Title</cite></a>
                    }
                    else
                    {
                        @result.Author
                        @: :
                        <a href="@Url.RouteUrl("SourcesDetail", new{ id = result.Id })" class="muted"><cite title="@result.Title">@result.Title</cite></a>
                    }
                </small>
            </blockquote>
        }
    </div>
}
