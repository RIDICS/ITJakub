{
    "Edition": {
        "middle-panel": {
            "title": "Nazev: {Name} {$editor} ,{$litType}", //variable starts with dollar sign
            "body": "{$editionTable} {$pages}",
            "variables": {
                "$litType": {
                    "type": "array",
                    "itemType": "LiteraryType",
                    "pattern": "[{item.start}-{item.end}]", //pattern for each item
                    "delimeter": "; "
                },
                "$editor": {
                    "type": "primitive",
                    "pattern": ",{Editor}",
                    "printIfNullValue": true,
                    "replaceNullValueBy": ""
                },
                "$editionTable": {
                    "type": "table",
                    "printRowIfNullValue": true,
                    "replaceNullValueBy": "&lt;Nezadáno&gt;", //special characters needs to be escaped
                    "rows": [ { "label": "Editor", "value": "{$editor}" }, { "label": "Předloha", "value": "{Pattern}" }, { "label": "Zkratka památky", "value": "{RelicAbbreviation}" } ]
                }
            }
        },
        "bottom-panel": {
            "custom": "copy: {Copyright}"
        }
    },

    "Dictionary": {
    },

    "OldCzechTextBank": {
    }

}
