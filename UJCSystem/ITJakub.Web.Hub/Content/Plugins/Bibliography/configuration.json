{
    "Edition": {
        "middle-panel": {
            "title": "{Name}",
            "body": "{$archive}{$sign}{$pages}{$century}",
            "variables": {
                "$test": {
                    "type": "if",
                    "pattern": "{Century}",
                    "onTrue": "{Editor}",
                    "onFalse": "was false"
                },
                "$litType": {
                    "type": "array",
                    "scope": "Pages",
                    "pattern": "<a href='{BookId}'>[{$LiteraryTypeStart}{$LiteraryTypeEnd}]</a>",
                    "delimeter": " , "
                },
                "$LiteraryTypeStart": {
                    "type": "basic",
                    "pattern": "{Start}",
                    "printIfNullValue": false,
                    "replaceNullValueBy": ""
                },
                "$LiteraryTypeEnd": {
                    "type": "basic",
                    "pattern": "-{End}",
                    "printIfNullValue": false,
                    "replaceNullValueBy": ""
                },
                "$sign": {
                    "type": "basic",
                    "pattern": ", {Sign}",
                    "printIfNullValue": false,
                    "replaceNullValueBy": ""
                },
                "$archive": {
                    "type": "basic",
                    "scope": "Archive",
                    "pattern": " {Name} ({City}, {State})",
                    "printIfNullValue": false
                },
                "$century": {
                    "type": "basic",
                    "pattern": ", {Century}. století",
                    "printIfNullValue": false
                },
                "$pages": {
                    "type": "basic",
                    "pattern": ", 155v- 166v,//TODO Pages?//167v-258v ",
                    "printIfNullValue": false
                }
            }
        },
        "bottom-panel": {
            "body": "{$editionTable}<a href='#'>Editační poznámka</a> <br> <a href=''>Copyright</a> {Copyright}",
            "variables": {
                "$editionTable": {
                    "type": "table",
                    "printRowIfNullValue": true,
                    "replaceNullValueBy": "&lt;Nezadáno&gt;",
                    "rows": [
                        { "label": "Editor", "pattern": "{Editor}" },
                        { "label": "Předloha", "pattern": "{Pattern}" },
                        { "label": "Zkratka památky", "pattern": "{RelicAbbreviation}" },
                        { "label": "Zkratka pramene", "pattern": "{SourceAbbreviation}" },
                        { "label": "Literární druh", "pattern": "{LiteraryType}" },
                        { "label": "Literární žánr", "pattern": "{LiteraryGenre}" },
                        { "label": "Poslední úprava edice", "pattern": "{LastEditation}" }
                    ]
                }
            }
        },
        "right-panel": {
            "info-button": {
                "url": "\\Editions\\info\\{BookId}"
            },
            "read-button": {
                "url": "\\Editions\\read\\{$test}"
            },
            "variables": {
                "$test": {
                    "type": "basic",
                    "pattern": "{Name}",
                    "printIfNullValue": false
                }
            }

        }
    },

    "Dictionary": {
        "middle-panel": {
            "short-info": "{$linked}",
            "title": "{Name} {$srcAbbreHref}",
            "body": "{$authors}{$description}{$archive}{$year}",
            "variables": {
                "$linked": {
                    "type": "if",
                    "pattern": "{Linked}",
                    "onTrue": "zapojený slovník",
                    "onFalse": "nezapojený slovník"
                },
                "$srcAbbreHref": {
                    "type": "basic",
                    "pattern": "<a href='#'>[{SourceAbbreviation}]</a>",
                    "printIfNullValue": false
                },
                "$authors": {
                    "type": "array",
                    "scope": "Authors",
                    "pattern": "{FirstName} {LastName}",
                    "delimeter": ", "
                },
                "$description": {
                    "type": "basic",
                    "pattern": ", {Description}",
                    "printIfNullValue": false
                },
                "$archive": {
                    "type": "basic",
                    "scope": "Archive",
                    "pattern": ", {City}",
                    "printIfNullValue": false
                },
                "$year": {
                    "type": "basic",
                    "pattern": " {Year}.",
                    "printIfNullValue": false
                }
            }
        },
        "right-panel": {
            "info-button": {
                "url": "\\Dictionary\\info\\{BookId}"
            },
            "read-button": {
                "url": "\\Dictionary\\read\\{$test}"
            },
            "variables": {
                "$test": {
                    "type": "basic",
                    "pattern": "{Name}",
                    "printIfNullValue": false
                }
            }

        }
    },

