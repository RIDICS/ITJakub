@model ITJakub.Web.Hub.Models.BookListingModel
@{
    ViewBag.Title = "Edice - Čtečka děl pokusná";
}
@section styles{
    <link href="~/Areas/Editions/css/itjakub.editions.css" rel="stylesheet" />
    <link href="~/lib/golden-layout/src/css/goldenlayout-base.css" rel="stylesheet" />
    <link href="~/lib/golden-layout/src/css/goldenlayout-light-theme.css" rel="stylesheet" />
    <link href="~/Areas/GoldenLayout/css/readerStyle.css" rel="stylesheet" />
}
@section scripts{
    @*<script src="~/Areas/GoldenLayout/js/test.js"></script>*@
    <script src="~/lib/golden-layout/dist/goldenlayout.js"></script>
    <script src="~/Areas/GoldenLayout/js/itjakub.goldenlayout.js"></script>
}

<div id="SearchDiv">

</div>

<div id="ReaderDiv" data-bookid="@Model.BookId" data-versionid="@Model.SnapshotId" data-has-image-url="@Url.Action("HasBookImage", "Reader", new {Area = ""})" data-can-print="@Model.CanPrintEdition">
    <div id="ReaderHeaderDiv">

    </div>
    <div id="ReaderBodyDiv">

    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        initGoldenReader(@Json.Serialize(Model.BookId), @Json.Serialize(Model.SnapshotId), @Json.Serialize(Model.BookTitle), @Json.Serialize(Model.BookPages), @Json.Serialize(Model.AudioTracks), @Json.Serialize(Model.SearchText, Model.JsonSerializerSettingsForBiblModule), @Json.Serialize(Model.InitPageId));
    });
</script>
