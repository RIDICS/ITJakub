@section styles{
    <link href="~/Areas/BohemianTextBank/css/itjakub.bohemiantextbank.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Areas/BohemianTextBank/js/itjakub.bohemiantextbank.bundle.js"></script>
    <script src="~/lib/bootbox/bootbox.min.js"></script>
}

@{
    ViewBag.Title = "Korpusy - Vyhledávání TEST";
}

@Html.Partial("_BibliographySearch")

<div class="corpus-search-div" id="corpus-search-div">
    <div class="corpus-search-setting-div">
        <div class="corpus-search-setting-div-label">Možnosti zobrazení</div>
        <div class="corpus-search-setting-div-checkboxes">
            <div class="checkbox" style="display: none;">
                <label><input id="wordCheckbox" type="checkbox" value="">Slovo</label>
            </div>
            <div class="checkbox">
                <label><input id="commentCheckbox" type="checkbox" value="">Komentář</label>
            </div>
            <div class="checkbox">
                <label><input id="languageCheckbox" type="checkbox" value="">Jazyk</label>
            </div>
            <div class="checkbox">
                <label><input id="structureCheckbox" type="checkbox" value="">Struktura textu</label>
            </div>
            <div class="checkbox">
                <label><input id="paragraphCheckbox" type="checkbox" value="">Odstavec</label>
            </div>
        </div>
        <div class="corpus-search-setting-div-context" style="display:none">
            <label for="contextPositionsSelect">Pozic v kontextu</label>
            <select id="contextPositionsSelect">
                <option value="20">20</option>
                <option value="50" selected="selected">50</option>
                <option value="70">70</option>
                <option value="100">100</option>
            </select>
        </div>
        <div class="corpus-search-setting-div-results-count">
            <div>Počet děl: </div>
            <div id="totalResultCountDiv"></div>
        </div>
        <div class="corpus-search-setting-div-pagination pagination-extra-small" id="paginationContainer">
            <div class="btn-group">
                <button type="button" class="btn btn-default search-result-prev-page" disabled><i class="fa fa-chevron-left" aria-hidden="true"></i>
                </button>
                <button type="button" class="btn btn-default search-result-next-page"><i class="fa fa-chevron-right" aria-hidden="true"></i>
                </button>
            </div> 
        </div>
    </div>
    <div class="corpus-search-results-div">
        <div id="corpus-search-results-table-div" class="corpus-search-results-table-div">
            <div id="corpus-search-results-table-div-loader">
                Pro zobrazení výsledků použijte vyhledávání
            </div>
            <div class="list-group container-fluid">
                <div id="search-results-div"></div>
            </div>
        </div>
        <div class="corpus-search-result-detail-div">
            <div class="corpus-search-detail">
                <div class="corpus-table-row">
                    <div class="corpus-table-cell label">Doc</div>
                    <div class="corpus-table-cell">
                        <div class="corpus-search-detail">
                            <div class="corpus-table-row">
                                <div class="corpus-table-cell label">Autor</div>
                                <div id="detail-author" class="corpus-table-cell">&lt;Nezadáno&gt;</div>
                            </div>
                            <div class="corpus-table-row">
                                <div class="corpus-table-cell label">Titul</div>
                                <div id="detail-title" class="corpus-table-cell">&lt;Nezadáno&gt;</div>
                            </div>
                            <div class="corpus-table-row">
                                <div class="corpus-table-cell label">Datace pramene</div>
                                <div id="detail-dating" class="corpus-table-cell">&lt;Nezadáno&gt;</div>
                            </div>
                            <div class="corpus-table-row">
                                <div class="corpus-table-cell label">Datace století</div>
                                <div id="detail-dating-century" class="corpus-table-cell">&lt;Nezadáno&gt;</div>
                            </div>
                            <div class="corpus-table-row">
                                <div class="corpus-table-cell label">Zkratka památky</div>
                                <div id="detail-abbrev" class="corpus-table-cell">&lt;Nezadáno&gt;</div>
                            </div>
                            <div class="corpus-table-row">
                                <a id="detail-edition-note-href" href="#">Ediční poznámka</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="corpus-table-row">
                    <div class="corpus-table-cell label">Folio</div>
                    <div id="detail-folio" class="corpus-table-cell">&lt;Nezadáno&gt;</div>
                </div>
                <div class="corpus-table-row">
                    <div class="corpus-table-cell label">Vers</div>
                    <div id="detail-vers" class="corpus-table-cell">&lt;Nezadáno&gt;</div>
                </div>
                <div class="corpus-table-row">
                    <div class="corpus-table-cell label">Bible vers</div>
                    <div class="corpus-table-cell">
                        <div class="corpus-search-detail">
                            <div class="corpus-table-row">
                                <div class="corpus-table-cell label">Kniha</div>
                                <div id="detail-bible-vers-book" class="corpus-table-cell">&lt;Nezadáno&gt;</div>
                            </div>
                            <div class="corpus-table-row">
                                <div class="corpus-table-cell label">Kapitola</div>
                                <div id="detail-bible-vers-chapter" class="corpus-table-cell">&lt;Nezadáno&gt;</div>
                            </div>
                            <div class="corpus-table-row">
                                <div class="corpus-table-cell label">Verš</div>
                                <div id="detail-bible-vers-vers" class="corpus-table-cell">&lt;Nezadáno&gt;</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        initSearchNew();
    });
</script>