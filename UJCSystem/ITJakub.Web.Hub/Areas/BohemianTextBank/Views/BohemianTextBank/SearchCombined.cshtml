@section styles{
    <link href="~/Areas/BohemianTextBank/css/itjakub.bohemiantextbank.css" rel="stylesheet" />
    <link href="~/Areas/BohemianTextBank/css/ridics.bohemiantextbank-search-viewer-combined.css" rel="stylesheet" />
    <link href="~/css/Plugins/ridics.indefinite-pagination.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Areas/BohemianTextBank/js/itjakub.bohemiantextbank.bundle.js"></script>
    <script src="~/lib/bootbox/bootbox.min.js"></script>
    <script src="~/js/Plugins/IndefinitePagination/ridics.indefinite-pagination.js"></script>
    <script src="~/lib/jquery-table-fixer/tableHeadFixer.js"></script>
}

@{
    ViewBag.Title = "Korpusy - Vyhledávání Combined";
}

@await Html.PartialAsync("_BibliographySearch")

    <div class="search-result-section container-fluid" id="corpus-search-div">
        <div class="row corpus-result-and-settings-row no-gutters">
            <div class="corpus-search-result-controls-container col-md-2 col-md-push-10 col-sm-push-9 col-sm-3 col-xs-12">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="corpus-search-settings-label">Možnosti zobrazení</div>
                    </div>
                </div>
                <div class="corpus-search-result-view-properties-advanced">
                    <div class="corpus-search-setting-div-context">
                        <label for="contextPositionsSelect">Pozic v kontextu:</label>
                        <input id="contextPositionsSelect" type="number">
                        <div class="context-size-warning"></div>
                    </div>
                    <div class="number-of-results-per-viewing-page">
                        <label for="number-of-results-per-viewing-page">Počet výsledků na stránce:</label>
                        <input id="number-of-results-per-viewing-page" type="number">
                        <div class="number-of-positions-size-warning"></div>
                    </div>
                    <div class="search-settings-changed-refresh text-center">
                        <button class="btn btn-default results-refresh-button"><i class="fa fa-refresh"></i></button>
                    </div>
                </div>
                <div class="corpus-search-settings-checkboxes">
                    <div class="checkbox" style="display: none;">
                        <label><input id="wordCheckbox" type="checkbox" value="">Slovo</label>
                    </div>
                    <div class="checkbox">
                        <label><input id="commentCheckbox" type="checkbox" value="">Komentář</label>
                    </div>
                    @*<div class="checkbox">TODO backend implementation required
                            <label><input id="languageCheckbox" type="checkbox" value="">Jazyk</label>
                        </div>
                        <div class="checkbox">
                            <label><input id="structureCheckbox" type="checkbox" value="">Struktura textu</label>
                        </div>*@
                    <div class="checkbox">
                        <label><input id="paragraphCheckbox" type="checkbox" value="">Odstavec</label>
                    </div>
                </div>
                <div class="corpus-search-setting-div-results-count">
                    <div>Počet děl:</div>
                    <div id="totalCompositionsCountDiv"></div>
                    <div class="total-results-count" style="display: none">
                        <div>Počet výsledků:</div>
                        <div id="totalResultCountDiv"></div>
                    </div>
                </div>
                <div class="corpus-search-setting-div-pagination pagination-extra-small" id="paginationContainer">
                </div>
            </div>
            <div class="corpus-search-results-div col-md-10 col-md-pull-2 col-sm-pull-3 col-sm-9 col-xs-12">
                <div class="row search-results-row no-gutters">
                    <div class="col-xs-12 result-text-col text-center">
                        <div class="alert alert-info corpus-search-results-table-div-loader">
                            Pro zobrazení výsledků použijte vyhledávání
                        </div><table class="text-results-table"><tbody class="text-results-table-body"></tbody></table>
                    </div>
                </div>
            </div>
            </div>
        <div class="row corpus-search-result-detail-row">
            <div class="corpus-search-result-detail-container col-xs-12">
                <div class="corpus-search-detail">
                    <div class="row result-info-section">
                        <div class="col-sm-2 col-xs-12 label">Doc</div>
                        <div class="col-sm-10 col-xs-12">
                            <div class="corpus-search-detail">
                                <div class="table-row row">
                                    <div class="col-sm-2 col-xs-12 label">Autor</div>
                                    <div class="detail-author col-sm-10 col-xs-12 break-word">&lt;Nezadáno&gt;</div>
                                </div>
                                <div class="table-row row">
                                    <div class="col-sm-2 col-xs-12 label">Titul</div>
                                    <div class="detail-title col-sm-10 col-xs-12 break-word">&lt;Nezadáno&gt;</div>
                                </div>
                                <div class="table-row row">
                                    <div class="col-sm-2 col-xs-12 label">Datace pramene</div>
                                    <div class="detail-dating col-sm-10 col-xs-12 break-word">&lt;Nezadáno&gt;</div>
                                </div>
                                <div class="table-row row">
                                    <div class="col-sm-2 col-xs-12 label">Datace století</div>
                                    <div class="detail-dating-century col-sm-10 col-xs-12 break-word">&lt;Nezadáno&gt;</div>
                                </div>
                                <div class="table-row row">
                                    <div class="col-sm-2 col-xs-12 label">Zkratka památky</div>
                                    <div class="detail-abbrev col-sm-10 col-xs-12 break-word">&lt;Nezadáno&gt;</div>
                                </div>
                                <div class="table-row row">
                                    <div class="col-xs-12 col-no-padding">
                                        <a class="detail-edition-note-href" href="#">Ediční poznámka</a>
                                    </div>
                                </div>
                            </div>
                        </div></div>
                    <div class="row result-info-section">
                        <div class="col-sm-2 col-xs-12 label">Folio</div>
                        <div class="col-sm-10 col-xs-12 col-no-padding">
                            <div class="detail-folio">&lt;Nezadáno&gt;</div>
                            </div>
                        </div>
                    <div class="row result-info-section">
                        <div class="col-sm-2 col-xs-12 label">Vers</div>
                        <div class="col-sm-10 col-xs-12 col-no-padding">
                            <div class="detail-vers">&lt;Nezadáno&gt;</div>
                            </div>
                        </div>
                    <div class="row result-info-section">
                        <div class="col-sm-2 col-xs-12 label">Bible vers</div>
                        <div class="col-sm-10 col-xs-12">
                                <div class="corpus-search-detail">
                                    <div class="table-row row">
                                        <div class="col-sm-2 col-xs-12 label">Kniha</div>
                                        <div class="detail-bible-vers-book col-sm-10 col-xs-12 break-word">&lt;Nezadáno&gt;</div>
                                    </div>
                                    <div class="table-row row">
                                        <div class="col-sm-2 col-xs-12 label">Kapitola</div>
                                        <div class="detail-bible-vers-chapter col-sm-10 col-xs-12 break-word">&lt;Nezadáno&gt;</div>
                                    </div>
                                    <div class="table-row row">
                                        <div class="col-sm-2 col-xs-12 label">Verš</div>
                                        <div class="detail-bible-vers-vers col-sm-10 col-xs-12 break-word">&lt;Nezadáno&gt;</div>
                                    </div>
                                </div>
                        </div>
                    </div></div>
            </div>
        </div>
        <ul class="page-history-constainer hidden"></ul>
    </div>

<script>
    $(document).ready(function () {
        initSearchCombined();
    });
</script>