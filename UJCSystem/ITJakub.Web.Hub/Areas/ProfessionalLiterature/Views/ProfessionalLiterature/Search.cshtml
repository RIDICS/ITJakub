@using Scalesoft.Localization.AspNetCore
@inject ILocalizationService Localizer
@inject IFileVersionProvider FileVersionProvider

@{
    ViewBag.Title = @Localizer.Translate("ProfessionalLiteratureSearch", "ProfessionalLiterature");
}

@section styles{
    <link asp-append-version="true" href="~/Areas/ProfessionalLiterature/css/itjakub.professionalliterature.css" rel="stylesheet" />
}
@section scripts{
    <script asp-append-version="true" src="~/Areas/ProfessionalLiterature/js/itjakub.professionalliterature.js"></script>
    <script asp-append-version="true" src="~/Areas/ProfessionalLiterature/js/itjakub.professionalliterature.search.js"></script>
}

<div id="bibliography-configuration-url" data-url="@FileVersionProvider.AddFileVersionToPath(Context.Request.PathBase, Url.Content("~/Areas/ProfessionalLiterature/content/BibliographyPlugin/search_configuration.json"))"></div>

@await Html.PartialAsync("_BibliographySearch")
