@using ITJakub.Web.Hub.Areas.Admin.Models.Type
@using ITJakub.Web.Hub.Helpers
@using Localization.AspNetCore.Service
@model ITJakub.Web.Hub.Areas.Admin.Models.ProjectWorkMetadataViewModel
@inject ILocalization Localizer

<div class="row resource-tab-row-fix">
    <div class="project-layout-box project-layout-box-500">
        <div class="panel-group" id="work-metadata-container">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Localizer.Translate("CommonInformations", "Admin")
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-name">@Localizer.Translate("ProjectName", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-name" class="form-control" value="NULL" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-title">@Localizer.Translate("Title", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-title" class="form-control" value="@Model.Title" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-subtitle">@Localizer.Translate("Subtitle", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-subtitle" class="form-control" value="@Model.Subtitle" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-relic-abbreviation">@Localizer.Translate("RelicAbbr", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-relic-abbreviation" class="form-control" value="@Model.RelicAbbreviation" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-source-abbreviation">@Localizer.Translate("SourceAbbr", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-source-abbreviation" class="form-control" value="@Model.SourceAbbreviation" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    @Localizer.Translate("Publications", "Admin")
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-publisher">@Localizer.Translate("Publisher", "Admin")</label>
                            <div class="col-md-6">
                                <select id="work-metadata-publisher" class="form-control">
                                    <option disabled selected value="" class="hidden"></option>
                                    @foreach (var publisher in Model.AllPublisherList)
                                    {
                                        <option value="@publisher.Id" @(publisher.Id == Model.PublisherId ? "selected" : null)>@publisher.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-default" id="add-publisher-button">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-publish-place">@Localizer.Translate("PublishPlace", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-publish-place" class="form-control" value="@Model.PublishPlace" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-publish-date">@Localizer.Translate("PublishDate", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-publish-date" class="form-control" value="@Model.PublishDate" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-bibl-text">@Localizer.Translate("Bibliography", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-bibl-text" class="form-control" value="@Model.BiblText" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-copyright">@Localizer.Translate("Copyrright", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-copyright" class="form-control" value="@Model.Copyright" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">@Localizer.Translate("Editors", "Admin")</label>
                            <div class="col-md-7">
                                <div id="work-metadata-editors">
                                    @foreach (var editor in Model.ResponsiblePersons)
                                    {
                                        <div class="editor-item" data-id="@editor.Id">
                                            <button class="btn btn-default remove-button"><span class="glyphicon glyphicon-remove"></span></button>
                                            <span class="text-as-form-control">@editor.FirstName @editor.LastName</span>
                                        </div>
                                    }
                                </div>
                                
                                <button class="btn btn-default" id="add-editor-button">@Localizer.Translate("Add", "Admin")</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    @Localizer.Translate("Original/Handwriting", "Admin")
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-literary-original">@Localizer.Translate("LiteraryOriginal", "Admin")</label>
                            <div class="col-md-7">
                                <span class="text-as-form-control" id="work-metadata-literary-original">@Model.LiteraryOriginalText</span>
                            </div>
                        </div>
                        <div>
                            <div class="form-group">
                                <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-country">@Localizer.Translate("Country", "Admin")</label>
                                <div class="col-md-7">
                                    <input type="text" id="work-metadata-original-country" class="form-control" value="@Model.ManuscriptCountry" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-settlement">@Localizer.Translate("City", "Admin")</label>
                                <div class="col-md-7">
                                    <input type="text" id="work-metadata-original-settlement" class="form-control" value="@Model.ManuscriptSettlement" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-repository">@Localizer.Translate("Institution", "Admin")</label>
                                <div class="col-md-7">
                                    <input type="text" id="work-metadata-original-repository" class="form-control" value="@Model.ManuscriptRepository" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-idno">@Localizer.Translate("Signature", "Admin")</label>
                                <div class="col-md-7">
                                    <input type="text" id="work-metadata-original-idno" class="form-control" value="@Model.ManuscriptIdno" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-extent">@Localizer.Translate("Extent", "Admin")</label>
                                <div class="col-md-7">
                                    <input type="text" id="work-metadata-original-extent" class="form-control" value="@Model.ManuscriptExtent" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">@Localizer.Translate("Authors", "Admin")</label>
                            <div class="col-md-7">
                                <div id="work-metadata-authors">
                                    @foreach (var author in Model.Authors)
                                    {
                                        <div class="author-item" data-id="@author.Id">
                                            <button class="btn btn-default remove-button"><span class="glyphicon glyphicon-remove"></span></button>
                                            <span class="text-as-form-control">@author.FirstName @author.LastName</span>
                                        </div>
                                    }
                                </div>

                                <button class="btn btn-default" id="add-author-button">@Localizer.Translate("Add", "Admin")</button>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-origin-date">@Localizer.Translate("OriginDate", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-origin-date" class="form-control" value="@Model.OriginDate" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-not-before">@Localizer.Translate("NotBefore", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-not-before" class="form-control" value="@Model.NotBefore" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-not-after">@Localizer.Translate("NotAfter", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-not-after" class="form-control" value="@Model.NotAfter" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    @Localizer.Translate("Categorization", "Admin")
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-category">@Localizer.Translate("Category", "Admin")</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-category" class="form-control" value="@Localizer.Translate("Category", "Admin")" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">@Localizer.Translate("LiteraryKind", "Admin")</label>
                            <div class="col-md-7">
                                <div id="work-metadata-literary-kind">
                                    @foreach (var kind in Model.AllLiteraryKindList)
                                    {
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" value="@kind.Id" @(Model.SelectedLiteraryKindIds.Contains(kind.Id) ? "checked" : null) /> @kind.Name
                                            </label>
                                        </div>
                                    }
                                </div>

                                <div class="add-button">
                                    <button class="btn btn-default" id="add-literary-kind-button">@Localizer.Translate("Add", "Admin")</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">@Localizer.Translate("LiteraryGenre", "Admin")</label>
                            <div class="col-md-6">
                                <div id="work-metadata-literary-genre">
                                    @foreach (var genre in Model.AllLiteraryGenreList)
                                    {
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" value="@genre.Id" @(Model.SelectedLiteraryGenreIds.Contains(genre.Id) ? "checked" : null) /> @genre.Name
                                            </label>
                                        </div>
                                    }
                                </div>

                                <div class="add-button">
                                    <button class="btn btn-default" id="add-literary-genre-button">@Localizer.Translate("Add", "Admin")</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-last-modification">@Localizer.Translate("LastModification", "Admin")</label>
                            <div class="col-md-7">
                                <span class="text-as-form-control" id="work-metadata-last-modification">@Model.LastModification</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="project-form-bottom-buttons" style="margin-top: 10px;">
            <div id="work-metadata-view-button-panel">
                <button class="btn btn-default" id="work-metadata-edit-button">@Localizer.Translate("Edit", "Admin")</button>
            </div>
            <div id="work-metadata-editor-button-panel">
                <div class="alert alert-success" id="work-metadata-save-success">@Localizer.Translate("MetadataSaveSuccess", "Admin")</div>
                <div class="alert alert-danger" id="work-metadata-save-error">@Localizer.Translate("MetadataSaveError", "Admin")</div>
                <button class="btn btn-default" id="work-metadata-cancel-button">@Localizer.Translate("Cancel", "Admin")</button>
                <button class="btn btn-default" id="work-metadata-save-button"><span class="saving-icon loading-small-button"></span> @Localizer.Translate("Save", "Admin")</button>
            </div>
        </div>
    </div>
    <div class="project-layout-box project-layout-box-200">
        <div class="light-border">
            <h4>@Localizer.Translate("Category", "Admin")</h4>
            <div>
                <label><input type="checkbox" /><span> @Localizer.Translate("OldBohemian", "Admin")</span></label>
            </div>
            <div>
                <label><input type="checkbox" /><span> @Localizer.Translate("MiddleBohemian", "Admin")</span></label>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" id="add-publisher-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
