@using ITJakub.Web.Hub.Areas.Admin.Models.Type
@using ITJakub.Web.Hub.Helpers
@model ITJakub.Web.Hub.Areas.Admin.Models.ProjectWorkMetadataViewModel

<div class="row resource-tab-row-fix">
<div class="project-layout-box project-layout-box-500">
<div class="panel-group" id="work-metadata-container">
<div class="panel panel-default">
    <div class="panel-heading">
        Obecné informace
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-title">Název projektu</label>
                <div class="col-md-7">
                    <input type="text" id="work-metadata-title" class="form-control" value="@Model.Title"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-subtitle">Podnázev projektu</label>
                <div class="col-md-7">
                    <input type="text" id="work-metadata-subtitle" class="form-control" value="@Model.Subtitle"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-relic-abbreviation">Zkratka památky</label>
                <div class="col-md-7">
                    <input type="text" id="work-metadata-relic-abbreviation" class="form-control" value="@Model.RelicAbbreviation"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-source-abbreviation">Zkratka pramene</label>
                <div class="col-md-7">
                    <input type="text" id="work-metadata-source-abbreviation" class="form-control" value="@Model.SourceAbbreviation"/>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        Publikace
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-publisher">Nakladatel</label>
                <div class="col-md-7">
                    <input type="text" id="work-metadata-publisher" class="form-control" value="@Model.PublisherText"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-publish-place">Místo publikace</label>
                <div class="col-md-7">
                    <input type="text" id="work-metadata-publish-place" class="form-control" value="@Model.PublishPlace"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-publish-date">Rok/roky publikace</label>
                <div class="col-md-7">
                    <input type="text" id="work-metadata-publish-date" class="form-control" value="@Model.PublishDate"/>
                </div>
                <div class="col-md-1">
                    <span class="year-validity-icon-invalid">
                        <i class="fa fa-lg fa-times" aria-hidden="true"></i>
                    </span><span class="year-validity-icon-valid">
                        <i class="fa fa-lg fa-check" aria-hidden="true"></i>
                    </span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Responsible people</label>
                <div class="col-md-8">
                    <div id="work-metadata-editors">
                        <input type="hidden" id="add-editor-id-preview" />
                        @foreach (var editor in Model.ResponsiblePersons)
                        {
                            <div class="editor-item" data-id="@editor.Id" data-responsible-type-id="@editor.ResponsibleType.Id">
                                <span class="person-list-manipulate">
                                    <div class="btn-group-vertical move-button">
                                        <button type="button" class="btn btn-default move-person-up">
                                            <i class="fa fa-chevron-up" aria-hidden="true"></i>
                                        </button>
                                        <button type="button" class="btn btn-default move-person-down">
                                            <i class="fa fa-chevron-down" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                    <button class="btn btn-default remove-button">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </button></span>
                                <span class="text-as-form-control">@editor.FirstName @editor.LastName - @editor.ResponsibleType.Text</span>
                            </div>
                        }
                    </div>

                    <button class="btn btn-default" id="add-editor-button">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
            <div class="form-group email-group">
                <label class="col-md-4 control-label" for="work-metadata-publisher-email">E-mail</label>
                <div class="col-md-7">
                    <input type="text" id="work-metadata-publisher-email" class="form-control" value="@Model.PublisherEmail" />
                </div><div class="col-md-1"><span class="email-validity-icon-invalid"><i class="fa fa-lg fa-times" aria-hidden="true"></i>
                </span><span class="email-validity-icon-valid"><i class="fa fa-lg fa-check" aria-hidden="true"></i>
                </span></div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-copyright">Copyright</label>
                <div class="col-md-7">
                    <textarea id="work-metadata-copyright" class="form-control" rows="3" cols="6">@Model.Copyright</textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-bibl-text">Bibliografie</label>
                <div class="col-md-7">
                    <input type="text" id="work-metadata-bibl-text" class="form-control" value="@Model.BiblText"/>
                </div>
                <div class="col-md-12 text-center generate-bibliography-row"><button class="btn btn-default generate-bibliography-button">Generate</button></div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        Předloha/rukopis
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-literary-original">Předloha</label>
                <div class="col-md-7">
                    <span class="text-as-form-control" id="work-metadata-literary-original">@Model.LiteraryOriginalText</span>
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-country">Země</label>
                    <div class="col-md-7">
                        <input type="text" id="work-metadata-original-country" class="form-control" value="@Model.ManuscriptCountry"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-settlement">Město</label>
                    <div class="col-md-7">
                        <input type="text" id="work-metadata-original-settlement" class="form-control" value="@Model.ManuscriptSettlement"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-repository">Instituce</label>
                    <div class="col-md-7">
                        <input type="text" id="work-metadata-original-repository" class="form-control" value="@Model.ManuscriptRepository"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-idno">Signatura</label>
                    <div class="col-md-7">
                        <input type="text" id="work-metadata-original-idno" class="form-control" value="@Model.ManuscriptIdno"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-extent">Rozsah</label>
                    <div class="col-md-7">
                        <input type="text" id="work-metadata-original-extent" class="form-control" value="@Model.ManuscriptExtent"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Authors (from book)</label>
                <div class="col-md-8">
                    <div id="work-metadata-authors">
                        <input type="hidden" id="add-author-id-preview"/>
                        @foreach (var author in Model.Authors)
                        {
                            <div class="author-item" data-id="@author.Id">
                                <span class="person-list-manipulate">
                                <div class="btn-group-vertical move-button">
                                    <button type="button" class="btn btn-default move-person-up"><i class="fa fa-chevron-up" aria-hidden="true"></i>
                                    </button>
                                    <button type="button" class="btn btn-default move-person-down"><i class="fa fa-chevron-down" aria-hidden="true"></i>
                                    </button>
                                </div> 
                                <button class="btn btn-default remove-button">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </button></span>
                                <span class="text-as-form-control"><span class="author-name">@author.FirstName</span> <span class="author-surname">@author.LastName</span></span>
                            </div>
                        }
                    </div>

                    <button class="btn btn-default" id="add-author-button">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-origin-date">Vydáno (slovní popis)</label>
                <div class="col-md-7">
                    <input type="text" id="work-metadata-origin-date" class="form-control" value="@Model.OriginDate"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-not-before">Nevydáno před rokem</label>
                <div class="col-md-5">
                    <input type="text" id="work-metadata-not-before" class="form-control" value="@Model.NotBefore?.ToString("yyyy")"/>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-default edit-date-range">Edit</button>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-not-after">Nevydáno po roce</label>
                <div class="col-md-5">
                    <input type="text" id="work-metadata-not-after" class="form-control" value="@Model.NotAfter?.ToString("yyyy")"/>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-default edit-date-range">Edit</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        Kategorizace
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <div id="all-existing-genres" class="hidden">
                    @foreach (var genre in Model.AllLiteraryGenreList)
                    {
                        <div class="existing-genre" data-id="@genre.Id" data-name="@genre.Name"></div>
                    }
                </div>
                <label class="col-md-4 control-label">Literární žánr</label>
                <div class="col-md-8">
                    <div id="work-metadata-literary-genre">
                        @foreach (var genreSelected in Model.SelectedLiteraryGenreIds)
                        {
                            <div class="genre-item clearfix">
                            <div class="col-xs-9">
                                <select class="item-select-box">
                                    @foreach (var genre in Model.AllLiteraryGenreList)
                                    {
                                        <option value="@genre.Id" @(genre.Id == genreSelected ? "selected" : null)>@genre.Name</option>
                                    }
                                </select>
                            </div>
                                <div class="button-float-right">
                                    <button class="btn btn-default remove-button"><span class="glyphicon glyphicon-remove"></span></button>
                                </div>
                                </div>
                                }
                            </div>

                </div>
                <div class="add-button col-md-12 text-center">
                    <button class="btn btn-default" id="add-literary-genre-button">Přidat</button>
                </div>
            </div>
            <div class="form-group">
                <div id="all-existing-lit-kinds" class="hidden">
                    @foreach (var kind in Model.AllLiteraryKindList)
                    {
                        <div class="existing-kind" data-id="@kind.Id" data-name="@kind.Name"></div>
                    }
                </div>
                <label class="col-md-4 control-label">Literární druh</label>
                <div class="col-md-8">
                    <div id="work-metadata-literary-kind">
                        @foreach (var kindSelected in Model.SelectedLiteraryKindIds)
                        {
                            <div class="lit-kind-item clearfix">
                                <div class="col-xs-9">
                                    <select class="item-select-box">
                                        @foreach (var kind in Model.AllLiteraryKindList)
                                        {
                                            <option value="@kind.Id" @(kind.Id == kindSelected ? "selected" : null)>@kind.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="button-float-right">
                                    <button class="btn btn-default remove-button"><span class="glyphicon glyphicon-remove"></span></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="add-button col-md-12 text-center">
                    <button class="btn btn-default" id="add-literary-kind-button">Přidat</button>
                </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Kategorie</label>
                <div class="col-md-8 category-container">
                    <div id="category-tree"></div>
                </div>
                <div class="all-category-list hidden">
                    @foreach (var category in Model.AllCategoryList)
                    {
                        <div class="existing-category-list-item" data-category-id="@category.Id" data-category-description="@category.Description" data-parent-category-id="@category.ParentCategoryId" data-external-id="@category.ExternalId">
                        </div>
                    }
                </div>
                <div class="selected-category-list hidden">
                    @foreach (var categoryId in Model.SelectedCategoryIds)
                    {
                        <div class="selected-category-list-item" data-category-id="@categoryId">
                        </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Keywords</label>
                <div class="col-md-7 keywords-container">
                    <div class="keywords-list-selected hidden">
                        @foreach (var selectedKeyword in Model.SelectedKeywords)
                        {
                            <div data-id="@selectedKeyword.Id" data-name="@selectedKeyword.Name"></div>
                        }
                    </div>

                    <input class="keywords-textarea form-control" type="text"/>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-4 control-label" for="work-metadata-last-modification">Poslední úprava</label>
                <div class="col-md-7">
                    <span class="text-as-form-control" id="work-metadata-last-modification">@Model.LastModification</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="project-form-bottom-buttons" style="margin-top: 10px;">
    <div id="work-metadata-view-button-panel">
        <button class="btn btn-default" id="work-metadata-edit-button">Upravit</button>
    </div>
    <div id="work-metadata-editor-button-panel">
        <div class="alert alert-success" id="work-metadata-save-success">Metadata uložena</div>
        <div class="alert alert-danger" id="work-metadata-save-error">Některá metadata se nepodařilo uložit</div>
        <div class="alert alert-danger" id="work-metadata-invalid-keyword-fail">Failed to save keywords. Please check for duplicates.</div>
        <button class="btn btn-default" id="work-metadata-cancel-button">Zrušit</button>
        <button class="btn btn-default" id="work-metadata-save-button"><span class="saving-icon loading-small-button"></span> Uložit</button>
    </div>
</div>
</div>

    <div class="modal fade" role="dialog" id="select-range-dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Select time period</h4>
                </div>
                <div class="modal-body">
                    <div class="regex-dating-condition">
                        <div class="regex-dating-precision-div">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Zrušit</button>
                    <button type="button" class="btn btn-default save-button">Ok</button>
                </div>
            </div>
        </div>
    </div>

<div class="modal fade" role="dialog" id="add-author-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Přidat nového autora</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-7 col-no-padding">
                            <div class="form-group">
                                <label for="add-author-search" class="col-xs-5 control-label">Vyhledat autora</label>
                                <input class="form-control" id="add-author-search" type="text">
                            </div>
                        </div>
                        <div class="col-xs-5">
                        </div>
                    </div>
                    <div class="row table-row">
                        <div class="col-xs-7">
                            <div class="list-unstyled row author-table-header">
                                <div class="list-group-item border-right col-xs-6">Name</div>
                                <div class="list-group-item border-left col-xs-6">Surname</div>
                            </div>
                            <div class="list-unstyled row author-list-items">
                            </div>
                            <div class="row">
                                <div class="col-xs-12 new-original-author">
                                    <div class="row author-name-input-row border-between">
                                        <div class="col-xs-6">
                                            <input class="form-control" id="add-author-first-name" type="text" placeholder="Name">
                                        </div>
                                        <div class="col-xs-6">
                                            <input class="form-control" id="add-author-last-name" type="text" placeholder="Surname">
                                        </div>
                                    </div>
                                    <div class="row new-author-button-row">
                                        <div class="col-xs-9 col-no-padding">
                                            <button class="new-original-author-button btn btn-default">Add new author</button>
                                        </div>
                                        <div class="col-xs-3 col-no-padding">
                                            <button class="new-original-author-finish-button btn btn-default">Done</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                            <div class="col-xs-offset-1 col-xs-4 works-produced">
                                <div class="list-unstyled row">
                                    <div class="list-group-item works-table-header">Works</div>
                                </div>
                                <div class="list-unstyled row">

                                    <div class="list-group-item works-list-items"></div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="dialog-error alert alert-danger true-inline-alert">Chyba při ukládání</div>
                <button type="button" class="btn btn-default" data-dismiss="modal">Zrušit</button>
                <button type="button" class="btn btn-default save-button"><span class="saving-icon loading-small-button"></span>Přidat</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" id="add-editor-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add new responsible person</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-7 col-no-padding">
                            <div class="form-group">
                                <label for="add-author-search" class="col-xs-9 control-label">Vyhledat odpovědnou osobu</label>
                                <input class="form-control" id="add-editor-search" type="text">
                            </div>
                        </div>
                        <div class="col-xs-5">
                        </div>
                    </div>
                    <div class="row table-row">
                        <div class="col-xs-7 responsible-people-table">
                            <div class="list-unstyled row responsible-person-table-header">
                                <div class="list-group-item border-right col-xs-6">Name</div>
                                <div class="list-group-item border-left col-xs-6">Surname</div>
                            </div>
                            <div class="list-unstyled row responsible-person-list-items">
                            </div>
                            <div class="row">
                                <div class="col-xs-12 new-responsible-person">
                                    <div class="row responsible-person-name-input-row">
                                        <div class="col-xs-6 border-between">
                                            <input class="form-control" id="add-responsible-person-first-name" type="text" placeholder="Name">
                                        </div>
                                        <div class="col-xs-6">
                                            <input class="form-control" id="add-responsible-person-last-name" type="text" placeholder="Surname">
                                        </div>
                                    </div>
                                    <div class="row new-responsible-person-button-row">
                                        <div class="col-xs-9 col-no-padding">
                                            <button class="new-responsible-person-button btn btn-default">Add new responsible person</button>
                                        </div>
                                        <div class="col-xs-3">
                                            <button class="new-responsible-person-finish-button btn btn-default">Done</button>
                                        </div>
                                    </div>
                                    <div class="row type-input-row">
                                        <div class="form-group">
                                            <label for="responsibility-type-input-elements" class="col-xs-9 control-label">Type</label>
                                            <div id="responsibility-type-input-elements">
                                                <div class="form-group">
                                                    <div class="col-xs-8 col-no-padding">
                                                        <select size="1" class="form-control" id="add-editor-type">
                                                            @foreach (var responsibleType in Model.AllResponsibleTypeList)
                                                            {
                                                                <option value="@responsibleType.Id">@responsibleType.Text (@responsibleType.Type.GetDisplayAttributeValue())</option>
                                                            }
                                                        </select>
                                                    </div>
                                                <div class="col-xs-4">
                                                    <button class="btn btn-default" id="add-responsible-type-button">Add new type</button>
                                                </div>
                                            </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row new-responsibility-type-row">
                                        <div class="form-group" id="add-responsible-type-container">
                                            <div class="col-md-3 col-no-padding">
                                                @Html.DropDownListFor(x => x.ResponsibleTypeEnumEmpty, Html.GetEnumSelectList<ResponsibleTypeEnumViewModel>(), htmlAttributes: new {@class = "form-control", id = "add-responsible-type-type"})
                                            </div>
                                            <div class="col-md-6">
                                                <input class="form-control" id="add-responsible-type-text" type="text" placeholder="Nový typ"/>
                                            </div>
                                            <div class="col-md-3">
                                                <button class="btn btn-default" id="add-responsible-type-save"><span id="add-responsible-type-saving-icon" class="loading-small-button"></span>Vytvořit</button>
                                            </div>
                                        </div>
                                        </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-offset-1 col-xs-4 works-participated">
                            <div class="list-unstyled row">
                                <div class="list-group-item works-table-header">Types/works participated</div>
                            </div>
                            <div class="list-unstyled row">

                                <div class="list-group-item works-list-items">TODO content</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="dialog-error alert alert-danger true-inline-alert">Chyba při ukládání</div>
                <button type="button" class="btn btn-default" data-dismiss="modal">Zrušit</button>
                <button type="button" class="btn btn-default save-button"><span class="saving-icon loading-small-button"></span>Přidat</button>
            </div>
        </div>
    </div>
</div>
</div>