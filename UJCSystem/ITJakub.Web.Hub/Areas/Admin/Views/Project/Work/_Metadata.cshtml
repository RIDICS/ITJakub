@using ITJakub.Web.Hub.Areas.Admin.Models.Type
@using ITJakub.Web.Hub.Helpers
@model ITJakub.Web.Hub.Areas.Admin.Models.ProjectWorkMetadataViewModel

<div class="row resource-tab-row-fix">
    <div class="project-layout-box project-layout-box-500">
        <div class="panel-group" id="work-metadata-container">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Obecné informace
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-name">Název projektu</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-name" class="form-control" value="NULL" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-title">Titul</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-title" class="form-control" value="@Model.Title" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-subtitle">Podtitul</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-subtitle" class="form-control" value="@Model.Subtitle" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-relic-abbreviation">Zkratka památky</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-relic-abbreviation" class="form-control" value="@Model.RelicAbbreviation" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-source-abbreviation">Zkratka pramene</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-source-abbreviation" class="form-control" value="@Model.SourceAbbreviation" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Publikace
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-publisher">Nakladatel</label>
                            <div class="col-md-6">
                                <select id="work-metadata-publisher" class="form-control">
                                    @foreach (var publisher in Model.AllPublisherList)
                                    {
                                        <option value="@publisher.Id" @(publisher.Id == Model.PublisherId ? "selected" : null)>@publisher.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-default" id="add-publisher-button">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-publish-place">Místo publikace</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-publish-place" class="form-control" value="@Model.PublishPlace" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-publish-date">Rok/roky publikace</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-publish-date" class="form-control" value="@Model.PublishDate" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-bibl-text">Bibliografie</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-bibl-text" class="form-control" value="@Model.BiblText" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-copyright">Copyright</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-copyright" class="form-control" value="@Model.Copyright" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Editoři</label>
                            <div class="col-md-7">
                                <div id="work-metadata-editors">
                                    <div class="editor-item">
                                        <button class="btn btn-default"><span class="glyphicon glyphicon-remove"></span></button>
                                        <span class="text-as-form-control">TODO Jméno Příjmení</span>
                                    </div>
                                    <div class="editor-item">
                                        <button class="btn btn-default"><span class="glyphicon glyphicon-remove"></span></button>
                                        <span class="text-as-form-control">TODO Jméno Příjmení</span>
                                    </div>
                                </div>
                                
                                <button class="btn btn-default" id="add-editor-button">Přidat</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Předloha/rukopis
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-literary-original">Předloha</label>
                            <div class="col-md-7">
                                <span class="text-as-form-control" id="work-metadata-literary-original">@Model.LiteraryOriginalText</span>
                            </div>
                        </div>
                        <div>
                            <div class="form-group">
                                <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-country">Země</label>
                                <div class="col-md-7">
                                    <input type="text" id="work-metadata-original-country" class="form-control" value="@Model.ManuscriptCountry" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-city">Město</label>
                                <div class="col-md-7">
                                    <input type="text" id="work-metadata-original-city" class="form-control" value="@Model.ManuscriptSettlement" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-institution">Instituce</label>
                                <div class="col-md-7">
                                    <input type="text" id="work-metadata-original-institution" class="form-control" value="@Model.ManuscriptRepository" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-signature">Signatura</label>
                                <div class="col-md-7">
                                    <input type="text" id="work-metadata-original-signature" class="form-control" value="@Model.ManuscriptIdno" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-offset-1 col-md-3 control-label" for="work-metadata-original-extent">Rozsah</label>
                                <div class="col-md-7">
                                    <input type="text" id="work-metadata-original-extent" class="form-control" value="@Model.ManuscriptExtent" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Autoři</label>
                            <div class="col-md-7">
                                <div id="work-metadata-authors">
                                    <div class="author-item">
                                        <button class="btn btn-default"><span class="glyphicon glyphicon-remove"></span></button>
                                        <span class="text-as-form-control">TODO Jméno Příjmení</span>
                                    </div>
                                    <div class="author-item">
                                        <button class="btn btn-default"><span class="glyphicon glyphicon-remove"></span></button>
                                        <span class="text-as-form-control">TODO Jméno Příjmení</span>
                                    </div>
                                </div>

                                <button class="btn btn-default" id="add-author-button">Přidat</button>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-origin-date">Vydáno (slovní popis)</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-origin-date" class="form-control" value="@Model.OriginDate" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-not-before">Nevydáno před rokem</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-not-before" class="form-control" value="@Model.NotBefore" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-not-after">Nevydáno po roce</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-not-after" class="form-control" value="@Model.NotAfter" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Kategorizace
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-category">Kategorie</label>
                            <div class="col-md-7">
                                <input type="text" id="work-metadata-category" class="form-control" value="TODO kategorie" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Literární druh</label>
                            <div class="col-md-7">
                                <div id="work-metadata-literary-kind">
                                    @foreach (var kind in Model.AllLiteraryKindList)
                                    {
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" value="@kind.Id" /> @kind.Name
                                            </label>
                                        </div>
                                    }
                                </div>

                                <div class="add-button">
                                    <button class="btn btn-default" id="add-literary-kind-button">Přidat</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Literární žánr</label>
                            <div class="col-md-6">
                                <div id="work-metadata-literary-genre">
                                    @foreach (var genre in Model.AllLiteraryGenreList)
                                    {
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" value="@genre.Id" /> @genre.Name
                                            </label>
                                        </div>
                                    }
                                </div>

                                <div class="add-button">
                                    <button class="btn btn-default" id="add-literary-genre-button">Přidat</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="work-metadata-last-modification">Poslední úprava</label>
                            <div class="col-md-7">
                                <span class="text-as-form-control" id="work-metadata-last-modification">@Model.LastModification</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="project-form-bottom-buttons" style="margin-top: 10px;">
            <div id="work-metadata-view-button-panel">
                <button class="btn btn-default" id="work-metadata-edit-button">Upravit</button>
            </div>
            <div id="work-metadata-editor-button-panel">
                <button class="btn btn-default" id="work-metadata-cancel-button">Zrušit</button>
                <button class="btn btn-default" id="work-metadata-save-button">Uložit</button>
            </div>
        </div>
    </div>
    <div class="project-layout-box project-layout-box-200">
        <div class="light-border">
            <h4>Kategorie</h4>
            <div>
                <label><input type="checkbox" /><span> Staročeský</span></label>
            </div>
            <div>
                <label><input type="checkbox" /><span> Středněčeský</span></label>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" id="add-publisher-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Přidat nového nakladatele</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="add-publisher-name">Název</label>
                        <div class="col-md-7">
                            <input type="text" id="add-publisher-name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="add-publisher-email">E-mail</label>
                        <div class="col-md-7">
                            <input type="text" id="add-publisher-email" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="dialog-error alert alert-danger true-inline-alert">Chyba při ukládání</div>
                <button type="button" class="btn btn-default" data-dismiss="modal">Zrušit</button>
                <button type="button" class="btn btn-default save-button"><span class="saving-icon loading-small-button"></span>Uložit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" id="add-literary-kind-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Přidat nový literární druh</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="add-literary-kind-name">Název</label>
                        <div class="col-md-7">
                            <input type="text" id="add-literary-kind-name" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="dialog-error alert alert-danger true-inline-alert">Chyba při ukládání</div>
                <button type="button" class="btn btn-default" data-dismiss="modal">Zrušit</button>
                <button type="button" class="btn btn-default save-button"><span class="saving-icon loading-small-button"></span>Uložit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" id="add-literary-genre-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Přidat nový literární žánr</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="add-literary-genre-name">Název</label>
                        <div class="col-md-7">
                            <input type="text" id="add-literary-genre-name" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="dialog-error alert alert-danger true-inline-alert">Chyba při ukládání</div>
                <button type="button" class="btn btn-default" data-dismiss="modal">Zrušit</button>
                <button type="button" class="btn btn-default save-button"><span class="saving-icon loading-small-button"></span>Uložit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" id="add-author-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Přidat nového autora</h4>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#tab-select-existing-author" data-toggle="tab">Výběr existujícího</a>
                    </li>
                    <li>
                        <a href="#tab-create-new-author" data-toggle="tab">Vytvoření nového</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div id="tab-select-existing-author" class="tab-pane active">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="add-author-search" class="col-md-3 control-label">Vyhledat autora</label>
                                <div class="col-md-7">
                                    <input class="form-control" id="add-author-search" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Jméno</label>
                                <div class="col-md-7">
                                    <input class="form-control" id="add-author-first-name-preview" type="text" disabled="disabled">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Příjmení</label>
                                <div class="col-md-7">
                                    <input class="form-control" id="add-author-last-name-preview" type="text" disabled="disabled">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="tab-create-new-author" class="tab-pane">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="add-author-first-name" class="col-md-3 control-label">Jméno</label>
                                <div class="col-md-7">
                                    <input class="form-control" id="add-author-first-name" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="add-author-last-name" class="col-md-3 control-label">Příjmení</label>
                                <div class="col-md-7">
                                    <input class="form-control" id="add-author-last-name" type="text">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="dialog-error alert alert-danger true-inline-alert">Chyba při ukládání</div>
                <button type="button" class="btn btn-default" data-dismiss="modal">Zrušit</button>
                <button type="button" class="btn btn-default save-button"><span class="saving-icon loading-small-button"></span>Uložit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" id="add-editor-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Přidat nového editora</h4>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#tab-select-existing-editor" data-toggle="tab">Výběr existujícího</a>
                    </li>
                    <li>
                        <a href="#tab-create-new-editor" data-toggle="tab">Vytvoření nového</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div id="tab-select-existing-editor" class="tab-pane active">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="add-editor-search" class="col-md-3 control-label">Vyhledat editora</label>
                                <div class="col-md-7">
                                    <input class="form-control" id="add-editor-search" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Jméno</label>
                                <div class="col-md-7">
                                    <input class="form-control" id="add-editor-first-name-preview" type="text" disabled="disabled">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Příjmení</label>
                                <div class="col-md-7">
                                    <input class="form-control" id="add-editor-last-name-preview" type="text" disabled="disabled">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="tab-create-new-editor" class="tab-pane">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="add-editor-first-name" class="col-md-3 control-label">Jméno</label>
                                <div class="col-md-7">
                                    <input class="form-control" id="add-editor-first-name" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="add-editor-last-name" class="col-md-3 control-label">Příjmení</label>
                                <div class="col-md-7">
                                    <input class="form-control" id="add-editor-last-name" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="add-editor-type" class="col-md-3 control-label">Typ</label>
                                <div class="col-md-7">
                                    <select class="form-control" id="add-editor-type">
                                        @foreach (var responsibleType in Model.AllResponsibleTypeList)
                                        {
                                            <option value="@responsibleType.Id">@responsibleType.Text (@responsibleType.Type.GetDisplayAttributeValue())</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-7">
                                    <button class="btn btn-default" id="add-responsible-type-button">Přidat typ</button>
                                </div>
                            </div>
                            <div class="form-group" id="add-responsible-type-container">
                                <div class="col-md-3">
                                    @Html.DropDownListFor(x => x.ResponsibleTypeEnumEmpty, Html.GetEnumSelectList<ResponsibleTypeEnumViewModel>(), htmlAttributes: new { @class = "form-control" })
                                </div>
                                <div class="col-md-4">
                                    <input class="form-control" id="add-responsible-type-text" type="text" placeholder="Nový typ"/>
                                </div>
                                <div class="col-md-3">
                                    <button class="btn btn-default" id="add-responsible-type-save">Vytvořit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="dialog-error alert alert-danger true-inline-alert">Chyba při ukládání</div>
                <button type="button" class="btn btn-default" data-dismiss="modal">Zrušit</button>
                <button type="button" class="btn btn-default save-button"><span class="saving-icon loading-small-button"></span>Uložit</button>
            </div>
        </div>
    </div>
</div>
