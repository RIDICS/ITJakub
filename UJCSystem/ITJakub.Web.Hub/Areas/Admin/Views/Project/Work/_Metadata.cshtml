<div class="modal fade" role="dialog" id="add-editor-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Localizer.Translate("AddNewEditor", "Admin")</h4>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#tab-select-existing-editor" data-toggle="tab">@Localizer.Translate("SelectExisting", "Admin")</a>
                    </li>
                    <li>
                        <a href="#tab-create-new-editor" data-toggle="tab">@Localizer.Translate("CreateNew", "Admin")</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div id="tab-select-existing-editor" class="tab-pane active">
