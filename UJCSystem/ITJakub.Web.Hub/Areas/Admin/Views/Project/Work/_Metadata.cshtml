                    </div>
                    <div id="tab-create-new-editor" class="tab-pane">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="add-editor-first-name" class="col-md-3 control-label">@Localizer.Translate("FirstName", "Admin")</label>
                                <div class="col-md-7">
                                    <input class="form-control" id="add-editor-first-name" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="add-editor-last-name" class="col-md-3 control-label">@Localizer.Translate("LastName", "Admin")</label>
                                <div class="col-md-7">
                                    <input class="form-control" id="add-editor-last-name" type="text">
                                </div>
                            </div>
