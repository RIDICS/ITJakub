@using Scalesoft.Localization.AspNetCore
@model ITJakub.Web.Hub.Areas.Admin.Models.ResourcesViewModel
@inject ILocalizationService Localizer


<div class="panel panel-default publish-resource-panel" data-resource-type="@Html.Raw((int) Model.ResourceType)">
    <div class="panel-heading">
        <div class="collapse-icon">
            <a data-toggle="collapse" href="#panel-@Html.Raw((int) Model.ResourceType)"><span class="glyphicon glyphicon-menu-down"></span></a>
        </div>
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#panel-@Html.Raw((int) Model.ResourceType)">@Model.Title</a>
        </h4>
    </div>
    <div id="panel-@Html.Raw((int) Model.ResourceType)" class="panel-collapse collapse in">
        <table class="table">
            <tr class="header">
                <th>
                    <div class="checkbox">
                        <label title="@Localizer.Translate("IncludeAll", "Admin")">
                            <input type="checkbox" class="include-all" /> @Localizer.Translate("Include", "Admin")
                        </label>
                    </div>
                </th>
                <th>@Localizer.Translate("Source", "Admin")</th>
                <th>@Localizer.Translate("Version", "Admin")</th>
                <th></th>
            </tr>
            @foreach (var resource in Model.ResourceList)
            {
                <tr data-id="@resource.Id">
                    <td class="include-checkboxes">
                        <input type="checkbox" />
                    </td>
                    <td>@resource.Name</td>
                    <td>
                        <select>
                            @foreach (var version in resource.VersionList)
                            {
                                <option value="@version.ResourceVersionId">@version.VersionNumber</option>
                            }
                        </select>
                    </td>
                    <td>
                        <a href="#">@Localizer.Translate("Preview", "Admin")</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>