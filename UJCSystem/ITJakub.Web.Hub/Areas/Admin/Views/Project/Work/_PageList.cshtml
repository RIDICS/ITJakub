<div class="project-page-list">
    <div class="row resource-tab-row-fix">
        <div class="col-md-2">
            <button type="button" class="btn btn-default form-control" id="project-pages-edit-button">Upravit seznam stránek</button>
        </div>

        <div class="col-md-2">
            <select size="25" class="form-control">
                <option>1r</option>
                <option>1v</option>
                <option>2r</option>
            </select>
        </div>

        <div class="col-md-2 main-buttons">
            <button type="button" class="btn btn-default form-control">Spárovat</button>
            <button type="button" class="btn btn-default form-control">Rozdělit</button>
            <div class="bottom-buttons">
                <button type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-up"></span>
                </button>
                <button type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-down"></span>
                </button>
            </div>
        </div>

        <div class="col-md-2">
            <select size="25" class="form-control">
                <option>IMG001.jpg</option>
                <option>IMG002.jpg</option>
                <option>IMG003.jpg</option>
            </select>
        </div>

        <div class="col-md-4 image-preview">
            <img alt="Náhled stránky" src="~/images/Mlceni_pink.jpg"/>
        </div>
    </div>

    <div class="project-bottom-buttons">
        <button type="button" class="btn btn-default">Uložit</button>
    </div>

    <div class="modal fade project-pages-dialog" role="dialog" id="project-pages-dialog">
        <div class="modal-dialog">
            <div class="modal-content page-list-editor-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Upravit seznam stránek</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-5 left-panel">
                            <div class="page-list-container"></div>
                        </div>
                        <div class="col-md-7 form-horizontal right-panel">
                            <div class="form-group special-pages-controls">
                                <div class="col-md-12">
                                    <div class="checkbox">
                                        <label>
                                            <input class="book-cover-checkbox" type="checkbox"/><span class="page-list-editor-controls-label">Obal [FC]</span>
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input class="book-startpage-checkbox" type="checkbox"/><span class="page-list-editor-controls-label">Úvodní strana [FS]</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="page-type"/><span class="page-list-editor-controls-label">Jednostránka</span>
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="page-type"/><span class="page-list-editor-controls-label">Dvojstránka</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="project-pages-format">Formát</label>
                                <div class="col-md-7">
                                    <select class="form-control input-sm" id="project-pages-format">
                                        <option data-format-value="1r">1r, 1v, 2r, 2v, ...</option>
                                        <option data-format-value="I'1r">I'1r, I'1v, I'2r, ...</option>
                                        <option data-format-value="Roman">I, II, III, IV, V, ...</option>
                                        <option data-format-value="Arabic">1, 2, 3, 4, 5, ...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="generate-list-inputs">
                                <div class="form-group-section generate-list-numberic-input-group">
                                    <div class="generate-list-numberic-input-group-heading">Generovat stránky</div>
                                    <div class="form-group">
                                        <label class="col-md-1 control-label" for="project-pages-generate-from">Od:</label>
                                        <div class="col-md-6">
                                            <input type="text" class="form-control input-sm" id="project-pages-generate-from"/>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-1 control-label" for="project-pages-generate-to">Do:</label>
                                        <div class="col-md-6">
                                            <input type="text" class="form-control input-sm" id="project-pages-generate-to"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group-section generate-list-from-book-input-group">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="checkbox">
                                                <label>
                                                    <input class="generate-pages-from-book" type="checkbox"/><span class="page-list-editor-controls-label">Generovat z textového zdroje</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-7">
                                            <select class="form-control input-sm">
                                                <option>Transkripce</option>
                                                <option>Transliterace</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-default generate-page-list">Generovat</button>
                                </div>
                            </div>

                            <div class="bottom-buttons">
                                <button type="button" class="btn btn-default move-page-up">
                                    <span class="glyphicon glyphicon-arrow-up"></span>
                                </button>
                                <button type="button" class="btn btn-default move-page-down">
                                    <span class="glyphicon glyphicon-arrow-down"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="row page-list-actions-row">
                        <div class="col-xs-1"></div>
                        <div class="col-xs-3">
                            <button class="btn btn-default edit-page-list">Editovat</button>
                        </div>
                        <div class="col-xs-8"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="dialog-error alert alert-danger true-inline-alert">Chyba při ukládání</div>
                    <button type="button" class="btn btn-default cancel-page-list">Zrušit</button>
                    <button type="button" class="btn btn-default save-page-list"><span class="saving-icon loading-small-button"></span>Uložit</button>
                </div>
            </div>
        </div>
    </div>
</div>