<div class="project-page-list">
    <div class="row resource-tab-row-fix">
        <div class="col-md-2">
            <button type="button" class="btn btn-default form-control" id="project-pages-edit-button">Upravit seznam stránek</button>
        </div>

        <div class="col-md-2">
            <select size="25" class="form-control">
                <option>1r</option>
                <option>1v</option>
                <option>2r</option>
            </select>
        </div>

        <div class="col-md-2 main-buttons">
            <button type="button" class="btn btn-default form-control">Spárovat</button>
            <button type="button" class="btn btn-default form-control">Rozdělit</button>
            <div class="bottom-buttons">
                <button type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-up"></span>
                </button>
                <button type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-down"></span>
                </button>
            </div>
        </div>

        <div class="col-md-2">
            <select size="25" class="form-control">
                <option>IMG001.jpg</option>
                <option>IMG002.jpg</option>
                <option>IMG003.jpg</option>
            </select>
        </div>

        <div class="col-md-4 image-preview">
            <img alt="Náhled stránky" src="~/images/Mlceni_pink.jpg" />
        </div>
    </div>

    <div class="project-bottom-buttons">
        <button type="button" class="btn btn-default">Uložit</button>
    </div>

    <div class="modal fade project-pages-dialog" role="dialog" id="project-pages-dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Upravit seznam stránek</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-5 left-panel">
                            <select size="10" class="form-control">
                                <option>TODO</option>
                            </select>
                            <button class="btn btn-default form-control">Editovat</button>
                        </div>
                        <div class="col-md-7 form-horizontal right-panel">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" /> Obal [FC]
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" /> Úvodní strana [FS]
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="radio">
                                        <label><input type="radio" name="page-type" /> Jednostránka</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" name="page-type" /> Dvojstránka</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="project-pages-format">Formát</label>
                                <div class="col-md-7">
                                    <select class="form-control input-sm" id="project-pages-format">
                                        <option>1r, 1v, 2r, 2v, ...</option>
                                        <option>I'1r, I'1v, I'2r, ...</option>
                                        <option>I, II, III, IV, V, ...</option>
                                        <option>1, 2, 3, 4, 5, ...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group-section">
                                <div>
                                    Generovat stránky
                                </div>
                                <div class="form-group">
                                    <label class="col-md-1 control-label" for="project-pages-generate-from">Od:</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control input-sm" id="project-pages-generate-from" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-1 control-label" for="project-pages-generate-to">Do:</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control input-sm" id="project-pages-generate-to" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group-section">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" /> Generovat z textového zdroje
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-7">
                                        <select class="form-control input-sm">
                                            <option>Transkripce</option>
                                            <option>Transliterace</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-default">Generovat</button>
                                </div>
                            </div>
                            <div class="bottom-buttons">
                                <button type="button" class="btn btn-default">
                                    <span class="glyphicon glyphicon-arrow-up"></span>
                                </button>
                                <button type="button" class="btn btn-default">
                                    <span class="glyphicon glyphicon-arrow-down"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="error">Chyba při ukládání</div>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Zrušit</button>
                    <button type="button" class="btn btn-default save-button"><span class="saving-icon loading-small-inline"></span>Uložit</button>
                </div>
            </div>
        </div>
    </div>
</div>