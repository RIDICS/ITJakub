@using Localization.AspNetCore.Service
@inject ILocalization Localizer

<div class="project-page-list">
    <div class="row resource-tab-row-fix">
        <div class="col-md-2">
            <button type="button" class="btn btn-default form-control" id="project-pages-edit-button">@Localizer.Translate("EditPageList", "Admin")</button>
        </div>

        <div class="col-md-2">
            <select size="25" class="form-control">
                <option>1r</option>
                <option>1v</option>
                <option>2r</option>
            </select>
        </div>

        <div class="col-md-2 main-buttons">
            <button type="button" class="btn btn-default form-control">@Localizer.Translate("Pair", "Admin")</button>
            <button type="button" class="btn btn-default form-control">@Localizer.Translate("Split", "Admin")</button>
            <div class="bottom-buttons">
                <button type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-up"></span>
                </button>
                <button type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-down"></span>
                </button>
            </div>
        </div>

        <div class="col-md-2">
            <select size="25" class="form-control">
                <option>IMG001.jpg</option>
                <option>IMG002.jpg</option>
                <option>IMG003.jpg</option>
            </select>
        </div>

        <div class="col-md-4 image-preview">
            <img alt="Náhled stránky" src="~/images/Mlceni_pink.jpg"/>
        </div>
    </div>

    <div class="project-bottom-buttons">
        <button type="button" class="btn btn-default">@Localizer.Translate("Save", "Admin")</button>
    </div>

    <div class="modal fade project-pages-dialog" role="dialog" id="project-pages-dialog">
        <div class="modal-dialog">
            <div class="modal-content page-list-editor-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@Localizer.Translate("EditPageList", "Admin")</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-5 left-panel">
                            <div class="page-list-container"></div>
                        </div>
                        <div class="col-md-7 form-horizontal right-panel">
                            <div class="form-group special-pages-controls">
                                <div class="col-md-12">
                                    <div class="checkbox">
                                        <label>
                                            <input disabled class="book-cover-checkbox" type="checkbox"/><span class="page-list-editor-controls-label">@Localizer.Translate("Cover", "Admin")</span>
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input disabled class="book-startpage-checkbox" type="checkbox"/><span class="page-list-editor-controls-label">@Localizer.Translate("FrontPage", "Admin")</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="generate-list-inputs">	
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio" name="page-type" checked="checked" /><span class="page-list-editor-controls-label">@Localizer.Translate("SinglePage", "Admin")</span>
                                                    </label>
                                                </div>
                                                <div class="radio">
                                                    <label>
                                                        <input class="doublepage-radiobutton" type="radio" name="page-type" /><span class="page-list-editor-controls-label">@Localizer.Translate("DoublePage", "Admin")</span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-2 control-label" for="project-pages-format">@Localizer.Translate("Format", "Admin")</label>
                                            <div class="col-md-7">
                                                <select class="form-control input-sm" id="project-pages-format">
                                                    <option data-format-value="1r">1r, 1v, 2r, 2v, ...</option>
                                                    <option data-format-value="I'1r">I'1r, I'1v, I'2r, ...</option>
                                                    <option data-format-value="Roman">I, II, III, IV, V, ...</option>
                                                    <option data-format-value="Arabic">1, 2, 3, 4, 5, ...</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group-section generate-list-numberic-input-group">
                                            <div class="generate-list-numberic-input-group-heading">@Localizer.Translate("GeneratePages", "Admin")</div>
                                            <div class="form-group">
                                                <label class="col-md-1 control-label" for="project-pages-generate-from">@Localizer.Translate("From", "Admin"):</label>
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control input-sm" id="project-pages-generate-from" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-1 control-label" for="project-pages-generate-to">@Localizer.Translate("To", "Admin"):</label>
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control input-sm" id="project-pages-generate-to" />
                                                </div>
                                            </div>
                                        </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-default generate-page-list">@Localizer.Translate("Generate", "Admin")</button>
                                </div>
                            </div>

                            <div class="bottom-buttons">
                                <button type="button" class="btn btn-default move-page-up">
                                    <span class="glyphicon glyphicon-arrow-up"></span>
                                </button>
                                <button type="button" class="btn btn-default move-page-down">
                                    <span class="glyphicon glyphicon-arrow-down"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="row page-list-actions-row">
                        <div class="col-xs-1"></div>
                        <div class="col-xs-3">
                            <button class="btn btn-default edit-page-list">Editovat</button>
                        </div>
                        <div class="col-xs-8"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="dialog-error alert alert-danger true-inline-alert">@Localizer.Translate("SaveError", "Admin")</div>
                    <button type="button" class="btn btn-default cancel-page-list">@Localizer.Translate("Cancel", "Admin")</button>
                    <button type="button" class="btn btn-default save-page-list"><span class="saving-icon loading-small-button"></span>@Localizer.Translate("Save", "Admin")</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade info-modal-dialog" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title info-dialog-title"></h4>
            </div>
            <div class="modal-body">
                <p class="info-dialog-message"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>