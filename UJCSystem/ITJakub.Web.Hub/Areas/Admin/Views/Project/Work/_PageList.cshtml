@using Localization.AspNetCore.Service
@inject ILocalization Localizer

<div class="project-page-list">
    <div class="row resource-tab-row-fix">
        <div class="col-md-2">
            <button type="button" class="btn btn-default form-control" id="project-pages-edit-button">@Localizer.Translate("EditPageList", "Admin")</button>
        </div>

        <div class="col-md-2">
            <select size="25" class="form-control">
                <option>1r</option>
                <option>1v</option>
                <option>2r</option>
            </select>
        </div>

        <div class="col-md-2 main-buttons">
            <button type="button" class="btn btn-default form-control">@Localizer.Translate("Pair", "Admin")</button>
            <button type="button" class="btn btn-default form-control">@Localizer.Translate("Split", "Admin")</button>
            <div class="bottom-buttons">
                <button type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-up"></span>
                </button>
                <button type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-down"></span>
                </button>
            </div>
        </div>

        <div class="col-md-2">
            <select size="25" class="form-control">
                <option>IMG001.jpg</option>
                <option>IMG002.jpg</option>
                <option>IMG003.jpg</option>
            </select>
        </div>

        <div class="col-md-4 image-preview">
            <img alt="Náhled stránky" src="~/images/Mlceni_pink.jpg" />
        </div>
    </div>

    <div class="project-bottom-buttons">
        <button type="button" class="btn btn-default">@Localizer.Translate("Save", "Admin")</button>
    </div>

    <div class="modal fade project-pages-dialog" role="dialog" id="project-pages-dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@Localizer.Translate("EditPageList", "Admin")</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-5 left-panel">
                            <select size="10" class="form-control">
                                <option>TODO</option>
                            </select>
                            <button class="btn btn-default form-control">@Localizer.Translate("Edit2", "Admin")</button>
                        </div>
                        <div class="col-md-7 form-horizontal right-panel">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" /> @Localizer.Translate("Cover", "Admin")
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" /> @Localizer.Translate("FrontPage", "Admin")
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="radio">
                                        <label><input type="radio" name="page-type" /> @Localizer.Translate("SinglePage", "Admin")</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" name="page-type" /> @Localizer.Translate("DoublePage", "Admin")</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="project-pages-format">@Localizer.Translate("Format", "Admin")</label>
                                <div class="col-md-7">
                                    <select class="form-control input-sm" id="project-pages-format">
                                        <option>1r, 1v, 2r, 2v, ...</option>
                                        <option>I'1r, I'1v, I'2r, ...</option>
                                        <option>I, II, III, IV, V, ...</option>
                                        <option>1, 2, 3, 4, 5, ...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group-section">
                                <div>
                                    @Localizer.Translate("GeneratePages", "Admin")
                                </div>
                                <div class="form-group">
                                    <label class="col-md-1 control-label" for="project-pages-generate-from">@Localizer.Translate("From", "Admin"):</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control input-sm" id="project-pages-generate-from" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-1 control-label" for="project-pages-generate-to">@Localizer.Translate("To", "Admin"):</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control input-sm" id="project-pages-generate-to" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group-section">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" /> @Localizer.Translate("GenerateFromTextSource", "Admin")
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-7">
                                        <select class="form-control input-sm">
                                            <option>@Localizer.Translate("Transcription", "Admin")</option>
                                            <option>@Localizer.Translate("Transliteration", "Admin")</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-default">@Localizer.Translate("Generate", "Admin")</button>
                                </div>
                            </div>
                            <div class="bottom-buttons">
                                <button type="button" class="btn btn-default">
                                    <span class="glyphicon glyphicon-arrow-up"></span>
                                </button>
                                <button type="button" class="btn btn-default">
                                    <span class="glyphicon glyphicon-arrow-down"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="dialog-error alert alert-danger true-inline-alert">@Localizer.Translate("SaveError", "Admin")</div>
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Localizer.Translate("Cancel", "Admin")</button>
                    <button type="button" class="btn btn-default save-button"><span class="saving-icon loading-small-button"></span>@Localizer.Translate("Save", "Admin")</button>
                </div>
            </div>
        </div>
    </div>
</div>