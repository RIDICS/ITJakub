@using ITJakub.Web.Hub.Areas.Admin.Models
@using Scalesoft.Localization.AspNetCore
@using Vokabular.MainService.DataContracts.Contracts.Type
@model NewPublicationViewModel
@inject ILocalizationService Localizer

<h3>@Localizer.Translate("CreateNewPublication", "Admin")</h3>

<div class="project-snapshot-new">
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="collapse-icon">
                        <a data-toggle="collapse" href="#publishToModules" aria-expanded="true">
                            <span class="fa fa-chevron-up"></span>
                            <span class="fa fa-chevron-down"></span>
                        </a>
                    </div>
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#publishToModules" aria-expanded="true">@Localizer.Translate("Visibility", "Admin")</a>
                    </h4>
                </div>
                <div id="publishToModules" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <div class="col-xs-6">
                            <div>@Localizer.Translate("DefaultModule", "Admin"):</div>
                            @{
                                var firstRadio = true;
                                foreach (var bookType in Model.AvailableBookTypes)
                                {
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="default-book-type" checked="@firstRadio" value="@bookType" />
                                            @Localizer.Translate(bookType.ToString(), "Admin")
                                        </label>
                                    </div>
                                    firstRadio = false;
                                }
                            }
                        </div>
                        <div class="col-xs-6">
                            <div>@Localizer.Translate("VisibilityInModules", "Admin"):</div>
                            @{
                                var firstCheckbox = true;
                                foreach (var bookType in Model.AvailableBookTypes)
                                {
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" value="@bookType" name="book-types" checked="@firstCheckbox" disabled="@firstCheckbox" />
                                            @Localizer.Translate(bookType.ToString(), "Admin")
                                        </label>
                                    </div>
                                    firstCheckbox = false;
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="collapse-icon">
                        <a data-toggle="collapse" href="#snapshotVisibility" aria-expanded="true">
                            <span class="fa fa-chevron-up"></span>
                            <span class="fa fa-chevron-down"></span>
                        </a>
                    </div>
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#snapshotVisibility" aria-expanded="true">@Localizer.Translate("Visibility", "Admin")</a>
                    </h4>
                </div>
                <div id="snapshotVisibility" class="panel-collapse collapse in">
                    <div class="panel-body">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="project-snapshot-resources">
        @await Html.PartialAsync("Work/_PublicationsNewResources", new ResourcesViewModel(ResourceTypeEnumContract.Text, Localizer.Translate("TextSources", "Admin"), Model.TextResourceList))
        @await Html.PartialAsync("Work/_PublicationsNewResources", new ResourcesViewModel(ResourceTypeEnumContract.Image, Localizer.Translate("ImageSources", "Admin"), Model.ImageResourceList))
        @await Html.PartialAsync("Work/_PublicationsNewResources", new ResourcesViewModel(ResourceTypeEnumContract.Audio, Localizer.Translate("AudioSources", "Admin"), Model.AudioResourceList))
        <div class="project-bottom-buttons">
            <div class="row">
                <div class="col-xs-12 col-md-6 form-horizontal">
                    <div class="form-group">
                        <label for="comment" class="control-label col-md-3 col-lg-2">@Localizer.Translate("Comment", "Admin")</label>
                        <div class="col-md-9 col-lg-10">
                            <input type="text" name="comment" id="comment" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4">
                    <div id="snapshotCreatingResult"></div>
                </div>
                    <div class="col-xs-12 col-md-2">
                        <button id="createSnapshot" type="button" class="btn btn-default">@Localizer.Translate("Save", "Admin")</button>
                    </div>
                </div>
        </div>
    </div>

    <div id="resourcePreviewModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-title"></span>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                   
                </div>
            </div>
        </div>
    </div>
</div>