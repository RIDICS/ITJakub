@using ITJakub.Web.Hub.Areas.Admin.Models
@using Scalesoft.Localization.AspNetCore
@using Vokabular.MainService.DataContracts.Contracts.Type
@model NewPublicationViewModel
@inject ILocalizationService Localizer

<h3>@Localizer.Translate("CreateNewPublication", "Admin")</h3>

<div class="project-snapshot-new">
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="collapse-icon">
                        <a data-toggle="collapse" href="#publishToModules"><span class="glyphicon glyphicon-menu-down"></span></a>
                    </div>
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#publishToModules">@Localizer.Translate("Visibility", "Admin")</a>
                    </h4>
                </div>
                <div id="publishToModules" class="panel-body panel-collapse collapse in">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" /> @Localizer.Translate("Edition", "Admin")
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" /> @Localizer.Translate("Corporas", "Admin")
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" /> @Localizer.Translate("Grammar", "Admin")
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" /> @Localizer.Translate("Audio", "Admin")
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="collapse-icon">
                        <a data-toggle="collapse" href="#snapshotVisibility"><span class="glyphicon glyphicon-menu-down"></span></a>
                    </div>
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#snapshotVisibility">@Localizer.Translate("Visibility", "Admin")</a>
                    </h4>
                </div>
                <div id="snapshotVisibility" class="panel-collapse collapse in">
                </div>
            </div>
        </div>
    </div>
    <div class="project-snapshot-resources">
        @await Html.PartialAsync("Work/_PublicationsNewResources", new ResourcesViewModel(ResourceTypeEnumContract.Text, "Textové zdroje", Model.ResourceList))
        @await Html.PartialAsync("Work/_PublicationsNewResources", new ResourcesViewModel(ResourceTypeEnumContract.Image, "Obrazové zdroje", Model.ResourceList))
        @await Html.PartialAsync("Work/_PublicationsNewResources", new ResourcesViewModel(ResourceTypeEnumContract.Audio, "Audio zdroje", Model.ResourceList))
        <div class="project-bottom-buttons">
            <button type="button" class="btn btn-default">@Localizer.Translate("Save", "Admin")</button>
        </div>
    </div>
   
    <div id="resourcePreviewModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                   
                </div>
            </div>
        </div>
    </div>
</div>
