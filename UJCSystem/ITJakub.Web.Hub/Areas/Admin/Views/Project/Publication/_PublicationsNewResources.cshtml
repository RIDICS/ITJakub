@using Scalesoft.Localization.AspNetCore
@model ITJakub.Web.Hub.Areas.Admin.Models.NewPublicationViewModel
@inject ILocalizationService Localizer

<input type="hidden" asp-for="@Model.Resources[Model.ActualResource].ResourceType" />
<div class="panel panel-default publish-resource-panel" data-resource-type="@Html.Raw((int) Model.Resources[Model.ActualResource].ResourceType)">
    <div class="panel-heading">
        <div class="collapse-icon">
            <a data-toggle="collapse" href="#panel-@Html.Raw((int) Model.Resources[Model.ActualResource].ResourceType)" aria-expanded="true">
                <span class="fa fa-chevron-up"></span>
                <span class="fa fa-chevron-down"></span>
            </a>
        </div>
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#panel-@Html.Raw((int) Model.Resources[Model.ActualResource].ResourceType)" aria-expanded="true">@Model.Resources[Model.ActualResource].Title</a>
        </h4>
    </div>
    
    <div id="panel-@Html.Raw((int) Model.Resources[Model.ActualResource].ResourceType)" class="panel-collapse collapse in">
        <table class="table">
            <tr class="header">
                <th class="include-all">
                    <div class="checkbox">
                        <label title="@Localizer.Translate("IncludeAll", "Admin")">
                            <input type="checkbox" class="include-all-checkbox" /> @Localizer.Translate("Include", "Admin")
                        </label>
                    </div>
                </th>
                <th>@Localizer.Translate("Source", "Admin")</th>
                <th class="version-label">@Localizer.Translate("Version", "Admin")</th>
                <th>@Localizer.Translate("Created", "Admin")</th>
                <th>@Localizer.Translate("Author", "Admin")</th>
                <th>@Localizer.Translate("Comment", "Admin")</th>
                <th></th>
            </tr>
            @if (Model.Resources[Model.ActualResource].ResourceList.Count == 0)
            {
                <tr>
                    <td colspan="7">
                        @Localizer.TranslateFormat("ProjectNotContains", "Admin", Model.Resources[Model.ActualResource].Title.ToLower())
                    </td>
                </tr>
            }
            
            @for (var i = 0; i < Model.Resources[Model.ActualResource].ResourceList.Count; i++)
            {
                <tr class="resource-row" data-id="@Model.Resources[Model.ActualResource].ResourceList[i].Id" data-version-id="@Model.Resources[Model.ActualResource].ResourceList[i].ResourceVersionId">
                    <td class="include-checkboxes">
                        <input type="hidden" asp-for="@Model.Resources[Model.ActualResource].ResourceList[i].Id" />
                        <input type="hidden" class="resource-version-id" asp-for="@Model.Resources[Model.ActualResource].ResourceList[i].ResourceVersionId" />
                        <input type="checkbox" asp-for="@Model.Resources[Model.ActualResource].ResourceList[i].IsSelected" />
                    </td>
                    <td class="name">
                        @Model.Resources[Model.ActualResource].ResourceList[i].Name
                    </td>
                    <td>
                        <select asp-for="@Model.Resources[Model.ActualResource].ResourceList[i].ResourceVersionId" class="selectpicker select-version" data-loaded="false">
                            <option value="@Model.Resources[Model.ActualResource].ResourceList[i].ResourceVersionId"
                                    data-name="@Model.Resources[Model.ActualResource].ResourceList[i].Name">
                                @Model.Resources[Model.ActualResource].ResourceList[i].VersionNumber
                            </option>
                        </select>
                    </td>
                    <td class="created">
                        @Model.Resources[Model.ActualResource].ResourceList[i].Created.ToLocalTime().ToString(Localizer.GetRequestCulture())
                    </td>
                    <td class="author">
                        @Model.Resources[Model.ActualResource].ResourceList[i].Author
                    </td>
                    <td class="comment">
                        @Model.Resources[Model.ActualResource].ResourceList[i].Comment
                    </td>
                    <td>
                        <button class="resource-preview btn btn-default">@Localizer.Translate("Preview", "Admin")</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>