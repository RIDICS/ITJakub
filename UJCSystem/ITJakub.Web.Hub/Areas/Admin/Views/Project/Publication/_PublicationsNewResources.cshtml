@using ITJakub.Web.Hub.Areas.Admin.Models.Constants
@using Scalesoft.Localization.AspNetCore
@model ITJakub.Web.Hub.Areas.Admin.Models.NewPublicationViewModel
@inject ILocalizationService Localizer

@{
    var actualResourceTypeIndex = (int)ViewData[PublicationViewConstants.ActualResourceType];
    var resourceTypeViewModel = Model.ResourceTypes[actualResourceTypeIndex];
}
<input type="hidden" asp-for="@resourceTypeViewModel.ResourceType" />
<div class="panel panel-default publish-resource-panel" data-resource-type="@Html.Raw((int) resourceTypeViewModel.ResourceType)">
    <div class="panel-heading">
        <div class="collapse-icon">
            <a data-toggle="collapse" href="#panel-@Html.Raw((int) resourceTypeViewModel.ResourceType)" aria-expanded="true">
                <span class="fa fa-chevron-up"></span>
                <span class="fa fa-chevron-down"></span>
            </a>
        </div>
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#panel-@Html.Raw((int) resourceTypeViewModel.ResourceType)" aria-expanded="true">@resourceTypeViewModel.Title</a>
        </h4>
    </div>
    
    <div id="panel-@Html.Raw((int) resourceTypeViewModel.ResourceType)" class="panel-collapse collapse in">
        <table class="table">
            <tr class="header">
                <th class="include-all">
                    <div class="checkbox">
                        <label title="@Localizer.Translate("IncludeAll", "Admin")">
                            <input type="checkbox" class="include-all-checkbox" /> @Localizer.Translate("Include", "Admin")
                        </label>
                    </div>
                </th>
                <th>@Localizer.Translate("Source", "Admin")</th>
                <th class="version-label">@Localizer.Translate("Version", "Admin")</th>
                <th>@Localizer.Translate("Created", "Admin")</th>
                <th>@Localizer.Translate("Author", "Admin")</th>
                <th>@Localizer.Translate("Comment", "Admin")</th>
                <th></th>
            </tr>
            @if (resourceTypeViewModel.ResourceList.Count == 0)
            {
                <tr>
                    <td colspan="7">
                        @Localizer.TranslateFormat("ProjectNotContains", "Admin", resourceTypeViewModel.Title.ToLower())
                    </td>
                </tr>
            }
            
            @for (var i = 0; i < resourceTypeViewModel.ResourceList.Count; i++)
            {
                <tr class="resource-row" data-id="@resourceTypeViewModel.ResourceList[i].Id" data-version-id="@resourceTypeViewModel.ResourceList[i].ResourceVersionId">
                    <td class="include-checkboxes">
                        <input type="hidden" asp-for="@resourceTypeViewModel.ResourceList[i].Id" />
                        <input type="hidden" class="resource-version-id" asp-for="@resourceTypeViewModel.ResourceList[i].ResourceVersionId" />
                        <input type="checkbox" asp-for="@resourceTypeViewModel.ResourceList[i].IsSelected" />
                    </td>
                    <td class="name">
                        @resourceTypeViewModel.ResourceList[i].Name
                    </td>
                    <td>
                        <select asp-for="@resourceTypeViewModel.ResourceList[i].ResourceVersionId" class="selectpicker select-version" data-loaded="false">
                            <option value="@resourceTypeViewModel.ResourceList[i].ResourceVersionId"
                                    data-name="@resourceTypeViewModel.ResourceList[i].Name">
                                @resourceTypeViewModel.ResourceList[i].VersionNumber
                            </option>
                        </select>
                    </td>
                    <td class="created">
                        @resourceTypeViewModel.ResourceList[i].Created.ToLocalTime().ToString(Localizer.GetRequestCulture())
                    </td>
                    <td class="author">
                        @resourceTypeViewModel.ResourceList[i].Author
                    </td>
                    <td class="comment">
                        @resourceTypeViewModel.ResourceList[i].Comment
                    </td>
                    <td>
                        <button class="resource-preview btn btn-default">@Localizer.Translate("Preview", "Admin")</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>