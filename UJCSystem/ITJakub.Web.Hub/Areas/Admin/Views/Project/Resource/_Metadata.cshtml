@using Scalesoft.Localization.AspNetCore
@model ITJakub.Web.Hub.Areas.Admin.Models.ProjectResourceMetadataViewModel
@inject ILocalizationService Localizer

<div class="row resource-tab-row-fix">
    <div class="project-layout-box project-layout-box-500">
        <div class="form-horizontal saving-form light-border">
            <div class="form-group">
                <label class="col-md-4 control-label" for="resource-metadata-editor">@Localizer.Translate("Editor", "Admin")</label>
                <div class="col-md-7">
                    <input type="text" id="resource-metadata-editor" class="form-control" value="@Model.Editor" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="resource-metadata-editor2">@Localizer.Translate("Editor2", "Admin")</label>
                <div class="col-md-7">
                    <input type="text" id="resource-metadata-editor2" class="form-control" value="@Model.Editor2" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="resource-metadata-last-modification">@Localizer.Translate("LastModification", "Admin")</label>
                <div class="col-md-7">
                    <input type="text" id="resource-metadata-last-modification" class="form-control" value="@Model.LastModification" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="resource-metadata-edition-note">@Localizer.Translate("EditionAbbr", "Admin")</label>
                <div class="col-md-7">
                    <input type="text" id="resource-metadata-edition-note" class="form-control" value="@Model.EditionNote" />
                </div>
            </div>
            <div class="project-form-bottom-buttons">
                <div id="resource-metadata-view-button-panel">
                    <button class="btn btn-default" id="resource-metadata-edit-button">@Localizer.Translate("Edit", "Admin")</button>
                </div>
                <div id="resource-metadata-editor-button-panel">
                    <button class="btn btn-default" id="resource-metadata-cancel-button">@Localizer.Translate("Cancel", "Admin")</button>
                    <button class="btn btn-default" id="resource-metadata-save-button">@Localizer.Translate("Save", "Admin")</button>
                </div>
            </div>
        </div>
    </div>
</div>