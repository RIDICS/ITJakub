@using Scalesoft.Localization.AspNetCore
@model IList<Vokabular.MainService.DataContracts.Contracts.TermContract>
@inject ILocalizationService Localizer

<div class="table-responsive">
    <table class="table table-hover">
        <tbody>
            @if (Model.Count == 0)
            {
                <div id="noTermsAlert" class="alert alert-info">@Localizer.Translate("PageDoesNotContainTerms", "RidicsProject")</div>
            }
            else
            {
                for (var i = 0; i < Model.Count; i++)
                {
                    var term = Model[i];
                    <tr class="term-row" data-term-id="@term.Id" data-term-category-id="@term.CategoryId" data-term-name="@term.Name" data-term-position="@term.Position">
                        <td>
                            <span class="name">
                                @term.Name
                            </span>
                            <div class="alert alert-danger"></div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>