@using ITJakub.Web.Hub.Constants
@using Scalesoft.Localization.AspNetCore
@inject ILocalizationService Localizer

@section styles{
    <link asp-append-version="true" href="~/Areas/Bibliographies/css/itjakub.bibliographies.css" rel="stylesheet" />
}
@section scripts{
    <script asp-append-version="true" src="~/Areas/Bibliographies/js/itjakub.bibliographies.search.js"></script>
}

@{
    ViewBag.Title = @Localizer.Translate("BibliographiesSearch", "Bibliographies");
    ViewData[BibliographyConstants.IsSearchAreaSelectionEnabled] = true;
}

@await Html.PartialAsync("_BibliographySearch")

<script>
    $(document).ready(function(){
        initBiblSearch();
    });
</script>