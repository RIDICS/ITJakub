@using Localization.AspNetCore.Service
@model ITJakub.Web.Hub.Models.FeedbackViewModel
@inject ILocalization Localizer

@section styles{
    <link href="~/Areas/OldGrammar/css/itjakub.oldgrammar.css" rel="stylesheet" />
}

@{
    ViewBag.Title = @Localizer.Translate("OldGrammarFeedback", "OldGrammar");
}

<div class="content-container">
    @await Html.PartialAsync("_StaticText", Model.PageStaticText)

    @await Html.PartialAsync("Feedback/_FeedbackForm", Model)
</div>
