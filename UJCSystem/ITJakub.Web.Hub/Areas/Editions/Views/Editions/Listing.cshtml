@model ITJakub.Web.Hub.Areas.Editions.Models.BookListingModel
@{
    ViewBag.Title = "Edice - Čtečka děl";
}

@section styles{
    @Styles.Render("~/itjakub/editions/css")
}
@section scripts{
    @Scripts.Render("~/itjakub/editions/javascript")
}


<div id="SearchDiv" class="top-offset-without-submenu">

</div>

<div id="ReaderDiv" data-bookid="@Model.BookXmlId" data-versionid="@Model.VersionXmlId">

</div>

<script type="text/javascript">
    $(document).ready(function() {
        initReader(@Html.Raw(Json.Encode(@Model.BookXmlId)), @Html.Raw(Json.Encode(@Model.VersionXmlId)),  @Html.Raw(Json.Encode(@Model.BookTitle)), @Html.Raw(Json.Encode(@Model.BookPages)),@Html.Raw(Json.Encode(@Model.SearchText)),@Html.Raw(Json.Encode(@Model.InitPageXmlId)));
    });
</script>