@using Localization.AspNetCore.Service
@model ITJakub.Web.Hub.Areas.RepositoryImport.Models.OaiPmhConfigurationViewModel

@inject ILocalization Localizer

<div class="col-md-offset-3 col-md-9">
    <p><b>@Localizer.Translate("Name", "RepositoryImport")</b>@Model.Name</p>
    <p><b>@Localizer.Translate("Description", "RepositoryImport")</b>@Model.Description</p>
    <p>
        @Localizer.Translate("AdminEmailAddresses", "RepositoryImport")
        <ul>
            @foreach (var mail in Model.AdminMails)
            {
                <li>@mail</li>
            }
        </ul>
    </p>
</div>
<div class="form-group">
    <label for="OaiPmhSet" class="control-label col-md-3">@Localizer.Translate("Set", "RepositoryImport")</label>
    <div class="col-md-8">
        <select type="text" id="OaiPmhSet" name="OaiPmhSet" class="form-control">
            @foreach (var set in Model.Sets)
            {
                <option value="@set.Id">@set.Name</option>
            }
        </select>
    </div>
</div>
<div class="form-group">
    <label for="OaiPmhMetadataFormat" class="control-label col-md-3">@Localizer.Translate("MetadataFormat", "RepositoryImport")</label>
    <div class="col-md-8">
        <select type="text" id="OaiPmhMetadataFormat" name="OaiPmhMetadataFormat" class="form-control">
            @foreach (var metadataFormat in Model.MetadataFormats)
            {
                <option value="@metadataFormat.MetadataPrefix">@metadataFormat.MetadataPrefix</option>
            }
        </select>
    </div>
</div>