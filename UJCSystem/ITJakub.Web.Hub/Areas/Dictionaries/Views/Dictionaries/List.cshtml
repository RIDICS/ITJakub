@section styles{
    <link href="~/wwwroot/Areas/Dictionaries/css/itjakub.dictionaries.css" rel="stylesheet" />
}
@section scripts{
    @Scripts.Render("~/itjakub/dictionaries/listjs")
}

@{
    ViewBag.Title = "Slovníky - Seznam";
}

<script type="text/javascript">
    $(document).ready(function() {
        initDictionaryList("@Request["bookId"]");
    });
</script>

<div class="transparent-content-container">
    <div class="search-with-saved-word-area">
        <div id="listHeader">
            <div id="listSearchDiv" style="float: left; width: 70%"></div>
            <div style="float: left; margin-left: 50px;">
                Řadit podle
                <div id="listResultsHeader" style="display: inline-block"></div>
            </div>
        </div>
    </div>

    <div class="dictionary-selects transparent-content-container">
        <div id="dropdownSelectDiv"></div>
    </div>

    <div class="dictionary-result-area transparent-content-container">
        <div id="listResults" class="loader"></div>
    </div>
</div>