@using Scalesoft.Localization.AspNetCore
@model ITJakub.Web.Hub.Models.User.UserCodeViewModel
@inject ILocalizationService Localizer

<div class="row">
    <div class="col-md-offset-1 col-lg-offset-2 col-md-10 col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">@Localizer.Translate("UserCode", "Account")</div>
            <div class="panel-body">
                <form id="regenerateUserCode" asp-controller="Account" asp-action="RegenerateUserCode" method="post" class="form-horizontal">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-6">
                            <div asp-validation-summary="All" class="alert alert-danger"></div>
                            <div class="alert-holder"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="alert alert-info">@Localizer.Translate("UserCodeHelp", "Account")</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserCode" class="col-md-3 control-label"></label>
                        <div class="col-md-6">
                            <input type="text" asp-for="UserCode" class="form-control" readonly="readonly" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-6">
                            <input type="submit" class="btn btn-default" value="@Localizer.Translate("GenerateNewUserCode", "Account")" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>