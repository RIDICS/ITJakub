@{
    ViewBag.Title = "Administrace - Správa oblíbených položek";
}
@section scripts{
    @Scripts.Render("~/bundles/colorpicker")
    @Scripts.Render("~/itjakub/favorite/management/javascript")
}
@section styles{
    @Styles.Render("~/Content/colorpicker")
}

<div class="content-container favorite-management">
    <h2>Správa oblíbených položek</h2>
    
    <div class="row">
        <div class="col-md-3">
            <span style="font-weight: bold">Štítky</span>
            <hr/>
            <div>
                
                @Html.Partial("_FavoriteLabelManagement")
                @Html.Partial("_FavoriteLabelManagement")
                @Html.Partial("_FavoriteLabelManagement")

            </div>

            <hr/>
            <div class="row">
                <div class="col-md-6 col-md-offset-6">
                    <button type="button" class="btn btn-default btn-block" id="add-new-label" data-toggle="modal" data-target="#new-favorite-label-dialog">
                        Přidat
                    </button>
                </div>
            </div>
        </div>
        

        <div class="col-md-9">
            <div class="row">
                <div class="col-md-6">
                    <span style="font-weight: bold">Oblíbené položky</span>
                </div>
                <div class="col-md-3">
                    <select class="form-control input-sm">
                        <option selected="selected">Filtr podle typu</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control input-sm" placeholder="Filtr podle názvu" />
                </div>
            </div>
            <hr/>
            
            @Html.Partial("_FavoriteItemManagement")
            @Html.Partial("_FavoriteItemManagement")
            @Html.Partial("_FavoriteItemManagement")
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" id="new-favorite-label-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Vytvořit nový štítek</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="favorite-label-name" class="col-md-3 control-label">Název štítku</label>
                        <div class="col-md-8">
                            <input class="form-control" id="favorite-label-name" type="text">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="favorite-label-color" class="col-md-3 control-label">Barva</label>
                        <div class="col-md-8">
                            <input class="form-control" id="favorite-label-color" type="text">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Zavřít</button>
                <button type="button" class="btn btn-default save-button">Uložit</button>
            </div>
        </div>
    </div>
</div>
