@using Scalesoft.Localization.AspNetCore
@model Ridics.Core.Structures.Shared.ErrorViewModel
@inject ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.Translate("error", "Error");
}

<div style="height: 50px;"></div>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">@Model.ErrorMessage</h4>
    <hr>
    <p class="mb-0">@Model.ErrorMessageDetail</p>
</div>


@if (Model.ShowRequestId)
{
    <div class="card">
        <div class="card-body">
            <h6>
                <strong>@Localizer.Translate("details", "Error")</strong>
            </h6>
            <small>
                <p>
                    <strong>@Localizer.Translate("status-code", "Error"):</strong> <code>@Model.ErrorCode</code>
                    <br />
                    <strong>@Localizer.Translate("request-id", "Error"):</strong> <code>@Model.RequestId</code>
                </p>
            </small>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div style="padding-left: 1.25rem; padding-top: 1rem;">
            @Html.ActionLink(Localizer.Translate("back-to-main-page", "Error"), "Index", "Home")
        </div>
    </div>
</div>