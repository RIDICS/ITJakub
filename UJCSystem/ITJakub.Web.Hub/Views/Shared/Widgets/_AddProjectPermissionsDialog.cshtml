@using Scalesoft.Localization.AspNetCore
@using Scalesoft.Localization.Core.Util
@using Vokabular.MainService.DataContracts.Contracts.Permission
@inject ILocalizationService Localizer

<div id="addProjectPermissionToRoleDialog" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Localizer.Translate("AddProjectPermissionToGroup", "Permission", LocTranslationSource.File)</h4>
                <h5 id="specificProjectName" class="modal-title"></h5>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="roleSearchInput">@Localizer.Translate("SearchGroupLabel", "Permission", LocTranslationSource.File)</label>
                    <input type="text" class="form-control role-search-input" id="roleSearchInput" placeholder="@Localizer.Translate("SearchGroup", "Permission", LocTranslationSource.File)" />
                </div>

                <div class="form-group">
                    <label for="selectedRole">@Localizer.Translate("SelectedGroup", "Permission")</label>
                    <p class="form-control-static" id="selectedRole">@Localizer.Translate("RoleIsNotSelected", "PermissionJs")</p>
                </div>
                
                <fieldset class="form-group">
                    <label>@Localizer.Translate("Permissions", "Permission")</label>
                    <div>
                        @await Html.PartialAsync("Widgets/_ProjectPermissionsWidget", new PermissionDataContract())
                    </div>
                </fieldset>

                <div id="addProjectToRoleError"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Localizer.Translate("Close", "Permission", LocTranslationSource.File)</button>
                <button type="button" class="btn btn-default" id="addPermission" data-init="false">@Localizer.Translate("AddPermissionToGroup", "Permission", LocTranslationSource.File)</button>
            </div>
        </div>
    </div>
</div>