@{
    ViewBag.Title = "Práva";
}
@section styles{
    @Styles.Render("~/itjakub/permission/css")
}
@section scripts{
    @Scripts.Render("~/itjakub/permission/user/javascript")
}

<h2>Práva uživatele</h2>

<div class="permission-left-panel">
    <div>
        <div class="permission-main-buttons">
            @*<button id="loadButton" class="btn btn-default permission-button hidden">Vybrat</button>*@
        </div>
        <div class="permission-search">
            <input type="text" class="form-control permission-search-input" id="mainSearchInput"/>
        </div>
    </div>
    <div id="selected-item-div" class="content hidden">
        <div class="item-details-title">Vybraný uživatel</div>
        <div class="item-details">
            <div class="detail-item">
                <span class="detail-item-title">Křestní jméno: </span>
                <span id="specificUserFirstName"></span>
            </div>
            <div class="detail-item">
                <span class="detail-item-title">Příjmení: </span>
                <span id="specificUserLastName"></span>
            </div>
            <div class="detail-item">
                <span class="detail-item-title">Uživatelské jméno: </span>
                <span id="specificUserUsername"></span>
            </div>
            <div class="detail-item">
                <span class="detail-item-title">E-mail: </span>
                <span id="specificUserEmail"></span>
            </div>
        </div>
    </div>
</div>
<div id="right-panel" class="permission-right-panel hidden">
    <div class="right-panel-title">Skupiny jichž je uživatel členem:</div>
    <ul class="user-groups">
    </ul>

    <div class="groups-buttons">
        <button id="addGroupButton" class="btn btn-default permission-button">+</button>
    </div>
</div>

<div id="addToGroupDialog" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Přidělit skupinu</h4>
            </div>
            <div class="modal-body">
                <div class="permission-search">
                    <input type="text" class="form-control permission-search-input" id="groupSearchInput"/>
                </div>

                <div class="content">
                    <div class="item-details-title">Vybraná skupina</div>
                    <div class="item-details">
                        <div class="detail-item">
                            <span class="detail-item-title">Název: </span>
                            <span id="specificGroupName"></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-item-title">Popis: </span>
                            <span id="specificGroupDescription"></span>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Zavřít</button>
                <button type="button" class="btn btn-default" id="add-user-to-group">Přiřadit</button>
            </div>
        </div>
    </div>
</div>

