@model ITJakub.Web.Hub.Areas.Admin.Models.ListViewModel<Vokabular.MainService.DataContracts.Contracts.Permission.RoleContract>
@using ITJakub.Web.Hub.Constants
@using Scalesoft.Localization.AspNetCore

@inject ILocalizationService Localizer

@{
    ViewBag.Title = Localizer.Translate("GroupPermissionManagementTitle", "Permission");
}
@section styles{
    <link href="~/css/ITJakub.Permission.css" rel="stylesheet" />
    <link href="~/css/ridics.permissions.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Areas/Admin/js/ridics.list.js"></script>
    <script src="~/Areas/Admin/js/ridics.role.list.js"></script>
}

<h2>@Localizer.Translate("GroupManagementHeadline", "Permission")</h2>

<div class="row page-control">
    <div class="col col-sm-6 col-lg-8">
        <div class="form-group">
            <a asp-action="EditRolePermissions" asp-controller="Permission" class="btn btn-default">@Localizer.Translate("ManagePermissions", "Permission")</a>
        </div>
    </div>
    <div class="col col-sm-6 col-lg-4">
        <form asp-action="RolePermission" asp-controller="Permission" method="get" class="role-search-form form-inline">
            <div class="form-group">
                <div class="search-button">
                    <button class="btn btn-default" type="submit">@Localizer.Translate("Search", "Permission")</button>
                </div>
                <input class="form-control search-value" name="search" value="@ViewData[PermissionConstants.SearchRole]"/>
            </div>
        </form>
    </div>
</div>
<div id="role-list-container">
    @await Html.PartialAsync("_RoleList", Model)
</div>

<div id="role-pagination" class="text-center"></div>