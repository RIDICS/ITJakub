@using Scalesoft.Localization.AspNetCore
@using Scalesoft.Localization.Core.Util
@model ITJakub.Web.Hub.Models.RoleViewModel
@inject ILocalizationService Localizer

@{
    ViewBag.Title = Localizer.Translate("NewGroup", "Permission", LocTranslationSource.File);
}

<form asp-action="CreateRole" asp-controller="Permission" method="post" id="createRoleForm" class="form-horizontal" role="form">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">@Localizer.Translate("NewGroup", "Permission", LocTranslationSource.File)</h4>
    </div>
    <div class="modal-body">

        <div asp-validation-summary="All" class="alert alert-danger"></div>
        @if (Model.SuccessfulUpdate)
        {
            <div class="alert alert-success" role="alert">
                @Localizer.Translate("SuccessGroupCreate", "Permission")
            </div>
        }
        <div class="alert-holder"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-3 control-label"></label>
            <div class="col-md-8">
                <input type="text" asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-3 control-label"></label>
            <div class="col-md-8">
                <input type="text" asp-for="Description" class="form-control" />
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">@Localizer.Translate("Close", "Permission", LocTranslationSource.File)</button>
        <input type="submit" class="btn btn-default" value="@Localizer.Translate("Save")" />
    </div>
</form>
