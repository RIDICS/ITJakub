@using ITJakub.Web.Hub.Constants
@using Scalesoft.Localization.AspNetCore
@model ITJakub.Web.Hub.Areas.Admin.Models.ListViewModel<Vokabular.MainService.DataContracts.Contracts.Permission.PermissionContract>

@inject ILocalizationService Localizer

@if (!string.IsNullOrEmpty((string)ViewData[PermissionConstants.SearchPermission]))
{
    <div class="row reset-search">
        <div class="query">
            <span class="text-nowrap">@Localizer.Translate("SearchQuery", "Permission"): <span class="searched-query">@ViewData[PermissionConstants.SearchPermission]</span></span>
        </div>
        <div class="reset-search-form">
            <form asp-action="RolePermissionList" asp-controller="Permission" method="get" class="">
                <button type="submit" class="btn btn-sm btn-default">@Localizer.Translate("ResetSearch", "Permission")</button>
            </form>
        </div>
    </div>
}

@if (Model != null && Model.List.Count != 0)
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Localizer.Translate("Permissions", "Permission")
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @await Html.PartialAsync("Widget/_PermissionListWidgetPage", Model)
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fa fa-info-circle fa-lg"></i>
        @if (!string.IsNullOrEmpty((string)ViewData[PermissionConstants.SearchPermission]))
        {
            @(Localizer.Translate("NoUsersSearch", "Permission") + "\"")<span class="searched-query">@ViewData[PermissionConstants.SearchPermission]</span>
            @("\"")
        }
        else
        {
            @Localizer.Translate("NoUsersFound", "Permission")
        }
    </div>
}