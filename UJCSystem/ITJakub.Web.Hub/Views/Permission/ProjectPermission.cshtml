@using Scalesoft.Localization.AspNetCore
@using Scalesoft.Localization.Core.Util
@model ITJakub.Web.Hub.Areas.Admin.Models.ListViewModel<Vokabular.MainService.DataContracts.Contracts.ProjectDetailContract>
@inject ILocalizationService Localizer

@{
    ViewBag.Title = Localizer.Translate("GroupPermissionManagementTitle", "Permission", LocTranslationSource.File);
}

@section styles{
    <link asp-append-version="true" href="~/css/ridics.permissions.css" rel="stylesheet"/>
}

@section scripts{
    <script asp-append-version="true" src="~/js/ridics.web-hub-api-client.js"></script>
    <script asp-append-version="true" src="~/Areas/Admin/js/permissions/ridics.permission-api-client.js"></script>
    <script asp-append-version="true" src="~/Areas/Admin/js/permissions/ridics.list.js"></script>
    <script asp-append-version="true" src="~/Areas/Admin/js/permissions/ridics.project.manager.js"></script>
}

<h2>@Localizer.Translate("GroupPermissionManagementHeadline", "Permission", LocTranslationSource.File)</h2>

<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 project-section" id="project-section">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="panel-title col col-xs-12 col-sm-2">
                        @Localizer.Translate("Group", "Permission")
                    </div>
                    <div class="col col-xs-12 col col-sm-10">
                        <form asp-action="ProjectPermission" asp-controller="Permission" method="get" class="project-search-form search-form form-inline">
                            <div class="form-group">
                                <div class="search-button">
                                    <button class="btn btn-default" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                                <input class="form-control search-value" name="search" value="@Model.SearchQuery" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div id="projectListContainer" class="list-container">
                    @await Html.PartialAsync("Widget/_ProjectListWidget", Model)
                </div>
                <div id="projectPagination" class="text-center"></div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 role-section" id="role-section">
        <div class="section hide">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="panel-title col col-xs-12 col-sm-2">
                            @Localizer.Translate("User", "Permission")
                        </div>
                        <div class="col col-xs-12 col col-sm-10">
                            <form asp-action="RolesByProject" asp-controller="Permission" method="get" class="role-search-form form-inline">
                                <div class="form-group">
                                    <button id="addPermissionButton" class="btn btn-default">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                    <div class="search-button">
                                        <button class="btn btn-default" type="submit">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                    <input class="form-control search-value" name="search" value="@Model.SearchQuery" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div id="roleListContainer" class="list-container"></div>
                    <div id="rolePagination" class="text-center"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="addProjectPermissionToRoleDialog" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Localizer.Translate("AddToGroup", "Permission", LocTranslationSource.File)</h4>
            </div>
            <div class="modal-body">
                <div class="permission-search">
                    <input type="text" class="form-control role-search-input" id="roleSearchInput" placeholder="@Localizer.Translate("SearchUser", "Permission", LocTranslationSource.File)" />
                </div>

                <div class="content">
                    <div class="item-details">
                        <div class="detail-item">
                            <span class="detail-item-title">@Localizer.Translate("SelectedGroup", "Permission", LocTranslationSource.File): </span>
                            <span id="specificProjectName"></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-item-title">@Localizer.Translate("SelectedUser", "Permission", LocTranslationSource.File): </span>
                            <span id="selectedRole"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Localizer.Translate("Close", "Permission", LocTranslationSource.File)</button>
                <button type="button" class="btn btn-default" id="addPermission" data-init="false">@Localizer.Translate("AddUserToGroup", "Permission", LocTranslationSource.File)</button>
            </div>
        </div>
    </div>
</div>