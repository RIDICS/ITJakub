@using ITJakub.Web.Hub.Constants
@using Scalesoft.Localization.AspNetCore
@using Scalesoft.Localization.Core.Util
@model ITJakub.Web.Hub.Areas.Admin.Models.ListViewModel<Vokabular.MainService.DataContracts.Contracts.Permission.RoleContract>
@inject ILocalizationService Localizer

@{
    ViewBag.Title = Localizer.Translate("GroupPermissionManagementTitle", "Permission", LocTranslationSource.File);
}
@section styles{
    <link href="~/css/ITJakub.Permission.css" rel="stylesheet" />
    <link href="~/css/ridics.permissions.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/js/Permission/itjakub.permission.group.js"></script>
    <script src="~/Areas/Admin/js/ridics.list.js"></script>
    <script src="~/Areas/Admin/js/ridics.group.list.js"></script>
    <script src="~/Areas/Admin/js/ridics.role.manager.js"></script>
}

<h2>@Localizer.Translate("GroupPermissionManagementHeadline", "Permission", LocTranslationSource.File)</h2>

<div class="col-sm-12 col-md-3">
    <div class="row page-control">
        <div class="col col-sm-12">
            <form asp-action="GroupPermission" asp-controller="Permission" method="get" class="search-form form-inline">
                <div class="form-group">
                    <div class="search-button">
                        <button class="btn btn-default" type="submit">@Localizer.Translate("Search", "Permission")</button>
                    </div>
                    <input class="form-control search-value" name="search" value="@ViewData[PermissionConstants.SearchRole]" />
                </div>
            </form>
        </div>
    </div>
    <div id="role-list-container">
        @await Html.PartialAsync("Widget/_GroupListWidget", Model)
    </div>

    <div id="role-pagination" class="text-center"></div>
</div>

<div class="col-sm-12 col-md-4 hide" id="user-section">
    <div class="row page-control">
        <div class="col-12 col-sm-12">
            <form asp-action="UsersByRole" asp-controller="Permission" method="get" class="search-form form-inline">
                <div class="form-group">
                    <div class="search-button">
                        <button class="btn btn-default" type="submit">@Localizer.Translate("Search", "Permission")</button>
                    </div>
                    <input class="form-control search-value" name="search" value="@ViewData[PermissionConstants.SearchUser]" />
                </div>
            </form>
        </div>
    </div>
    <div id="user-list-container">
    </div>

    <div id="user-pagination" class="text-center"></div>
</div>

@*TODO load via js*@
<div class="col-sm-12 col-md-5"></div>

<div class="row">
    <div class="permission-left-panel col-md-6">
        <div id="selected-item-div" class="content hidden">
            <div class="item-details-title">@Localizer.Translate("SelectedGroup", "Permission", LocTranslationSource.File)</div>
            <div class="item-details">
                <div class="detail-item">
                    <span class="detail-item-title">@Localizer.Translate("Name", "Permission", LocTranslationSource.File): </span>
                    <span id="specificGroupName"></span>
                </div>
                <div class="detail-item">
                    <span class="detail-item-title">@Localizer.Translate("Description", "Permission", LocTranslationSource.File): </span>
                    <span id="specificGroupDescription"></span>
                </div>
            </div>
            <div class="selected-item-buttons">
                <button id="deleteGroup" class="btn btn-default permission-button">@Localizer.Translate("DeleteGroup", "Permission", LocTranslationSource.File)</button>
            </div>
        </div>
    </div>
    <div id="right-panel" class="permission-right-panel col-md-6 hidden">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab-book-permissions" data-toggle="tab">@Localizer.Translate("BookPermissions", "Permission", LocTranslationSource.File)</a>
            </li>
            <li>
                <a href="#tab-special-permission" data-toggle="tab">@Localizer.Translate("SpecialPermissisons", "Permission", LocTranslationSource.File)</a>
            </li>
        </ul>

        <div class="tab-content">
            <div id="tab-book-permissions" class="tab-pane active">

                <div class="right-panel-title">@Localizer.Translate("AllowedBookList", "Permission", LocTranslationSource.File):</div>
                <ul id="allowedBooksList" class="items-list"></ul>

                <div class="category-buttons">
                    <button id="addBookToGroup" class="btn btn-default permission-button">+</button>
                </div>
            </div>
            <div id="tab-special-permission" class="tab-pane">

                <div class="right-panel-title">@Localizer.Translate("AllowedSpecialPermissionList", "Permission", LocTranslationSource.File):</div>
                <ul id="allowedSpecialPermissionList" class="items-list"></ul>

                <div class="category-buttons">
                    <button id="addSpecialPermissionToGroup" class="btn btn-default permission-button">+</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="createGroupModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Localizer.Translate("NewGroup", "Permission", LocTranslationSource.File)</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="new-group-name" class="col-md-3 control-label">@Localizer.Translate("GroupName", "Permission", LocTranslationSource.File)</label>
                        <div class="col-md-8">
                            <input class="form-control" id="new-group-name" name="new-text" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="new-group-description" class="col-md-3 control-label">@Localizer.Translate("Description", "Permission", LocTranslationSource.File)</label>
                        <div class="col-md-8">
                            <input class="form-control" id="new-group-description" name="new-text" type="text">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Localizer.Translate("Close", "Permission", LocTranslationSource.File)</button>
                <button type="button" class="btn btn-default" id="save-group">@Localizer.Translate("Create", "Permission", LocTranslationSource.File)</button>
            </div>
        </div>
    </div>
</div>

<div id="addBookToGroupDialog" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Localizer.Translate("AddAllowedBooksToGroup", "Permission", LocTranslationSource.File)</h4>
            </div>
            <div class="modal-body" id="add-books-to-group-form">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Localizer.Translate("Close", "Permission", LocTranslationSource.File)</button>
                <button type="button" class="btn btn-default" id="add-books-to-group-ok">@Localizer.Translate("Add", "Permission", LocTranslationSource.File)</button>
            </div>
        </div>
    </div>
</div>

<div id="addSpecialPermissionToGroupDialog" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Localizer.Translate("AddSpecialPermissionsToGroup", "Permission", LocTranslationSource.File)</h4>
            </div>
            <div class="modal-body" id="add-special-permission-to-group-form">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Localizer.Translate("Close", "Permission", LocTranslationSource.File)</button>
                <button type="button" class="btn btn-default" id="add-special-permissions-to-group-ok">@Localizer.Translate("Add", "Permission", LocTranslationSource.File)</button>
            </div>
        </div>
    </div>
</div>