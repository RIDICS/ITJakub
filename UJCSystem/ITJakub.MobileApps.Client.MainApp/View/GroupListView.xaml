<Page
    x:Name="PageRoot"
    x:Class="ITJakub.MobileApps.Client.MainApp.View.GroupListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:common="using:ITJakub.MobileApps.Client.MainApp.Common"
    DataContext="{Binding GroupListViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <Page.Resources>
        <common:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <common:GroupTypeToNameConverter x:Key="GroupTypeToNameConverter" />
        <CollectionViewSource x:Name="GroupList" Source="{Binding GroupList}" IsSourceGrouped="True"/>
    </Page.Resources>
    
    <Page.BottomAppBar>
        <CommandBar IsOpen="{Binding CommandBarOpen, Mode=TwoWay}"
                    IsSticky="True">
            <AppBarButton Icon="Sync" 
                          Label="Aktualizovat seznam"
                          Command="{Binding RefreshListCommand}"/>
            
            <AppBarButton Icon="Forward" 
                          Label="Připojit se k nové skupině">
                <AppBarButton.Flyout>
                    <Flyout>
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="15"
                                       Text="Zadejte číslo skupiny"/>
                            <TextBox Width="250"
                                     Margin="0 5 0 5"
                                     Text="{Binding ConnectToGroupCode, Mode=TwoWay}"/>
                            <Button HorizontalAlignment="Right" 
                                    Content="Připojit se"
                                    Command="{Binding ConnectToGroupCommand}"/>
                        </StackPanel>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            
            <AppBarButton Icon="Add" 
                          Label="Vytvořit skupinu"
                          Visibility="{Binding TeachersButtonVisibility}">
                <AppBarButton.Flyout>
                    <Flyout>
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="15"
                                       Text="Zadejte název skupiny:"/>
                            <TextBox Width="250"
                                     Text="{Binding NewGroupName, Mode=TwoWay}"
                                     Margin="0 5 0 5"/>
                            <Button HorizontalAlignment="Right" 
                                    Content="Vytvořit"
                                    Command="{Binding CreateNewGroupCommand}"/>
                        </StackPanel>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Forward"
                              Label="Připojit se"
                              Command="{Binding ConnectCommand}"
                              Visibility="{Binding ConnectButtonVisibility}"/>
                <AppBarButton Icon="Edit"
                              Label="Upravit"
                              Visibility="{Binding TeachersSecondaryButtonVisibility}"/>
                <AppBarButton Icon="Delete" 
                              Label="Odstranit"
                              Command="{Binding DeleteGroupCommand}"
                              Visibility="{Binding TeachersSecondaryButtonVisibility}">
                    <AppBarButton.Flyout>
                        <Flyout>
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontSize="15"
                                           MaxWidth="350"
                                           TextWrapping="Wrap"
                                           Text="{Binding DeleteMessage}">
                                    <Run Text="Chystáte se odstranit skupinu &quot;" />
                                    <Run Text="{Binding ElementName=PageRoot, Path=DataContext.SelectedGroup.GroupName}" />
                                    <Run Text="&quot;." />
                                </TextBlock>
                                <Button HorizontalAlignment="Right"
                                    Margin="0 10 0 0"
                                    Content="Odstranit"/>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Margin="0,0,0,0"
                    Command="{Binding NavigationHelper.GoBackCommand, ElementName=PageRoot}"
                    Style="{StaticResource NavigationBackButtonNormalStyle}"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    AutomationProperties.Name="Back"
                    AutomationProperties.AutomationId="BackButton"
                    AutomationProperties.ItemType="Navigation Button"
                    IsEnabled="False"/>
            <TextBlock Text="Seznam dostupných skupin"
                       Style="{StaticResource HeaderTextBlockStyle}"
                       Grid.Column="1"
                       IsHitTestVisible="false"
                       TextWrapping="NoWrap"
                       VerticalAlignment="Center"/>
            <Button Grid.Column="2"
                    Style="{StaticResource TextBlockButtonStyle}"
                    FontSize="30"
                    FontWeight="Normal"
                    Margin="0 0 70 40"
                    VerticalAlignment="Bottom">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Odhlásit se"
                                        FontSize="20"
                                        Command="{Binding LogOutCommand}"/>
                    </MenuFlyout>
                </Button.Flyout>
                <TextBlock>
                    <Run Text="{Binding FirstName}"/>
                    <Run Text="{Binding LastName}"/>
                </TextBlock>
            </Button>
            
            <ProgressBar Grid.Column="0"
                         Grid.ColumnSpan="3"
                         VerticalAlignment="Top"
                         IsIndeterminate="True"
                         Visibility="{Binding Loading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
        
        <GridView Grid.Row="1"
                  IsItemClickEnabled="True"
                  SelectionMode="Single"
                  Padding="110,0,50,100"
                  ItemsSource="{Binding Source={StaticResource GroupList}}"
                  SelectedItem="{Binding SelectedGroup, Mode=TwoWay}">
            
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="ItemClick">
                    <core:InvokeCommandAction Command="{Binding GroupClickCommand}"/>
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid GroupPadding="0 0 70 0" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                                Width="350"
                                Margin="4">
                        <Image Width="64"
                               Height="64"
                               Source="{Binding Icon}"/>
                        <StackPanel Orientation="Vertical"
                                    Width="270"
                                    Margin="10 0 0 0">
                            <TextBlock Text="{Binding GroupName}"
                                       FontWeight="Bold"/>
                            <TextBlock Foreground="{StaticResource ApplicationForegroundThemeBrush}">
                                <Run Text="Aplikace: " />
                                <Run Text="{Binding ApplicationName}" />
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource ApplicationForegroundThemeBrush}">
                                <Run Text="Počet členů: " />
                                <Run Text="{Binding MemberCount}" />
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource ApplicationForegroundThemeBrush}"
                                       Visibility="{Binding ElementName=PageRoot, Path=DataContext.TeachersButtonVisibility}">
                                <Run Text="Číslo skupiny: " />
                                <Run Text="{Binding GroupCode}" />
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>

            <GridView.GroupStyle>
                <GroupStyle HidesIfEmpty="True">
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Key, Converter={StaticResource GroupTypeToNameConverter}}" 
                                       Style="{StaticResource SubheaderTextBlockStyle}"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </GridView.GroupStyle>
        </GridView>
        
        <TextBlock Grid.Row="1"
                   Text="Nejsou dostupné žádné skupiny."
                   Style="{StaticResource SubheaderTextBlockStyle}"
                   Margin="120 20 0 0"
                   Visibility="{Binding NoGroupExist, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</Page>
