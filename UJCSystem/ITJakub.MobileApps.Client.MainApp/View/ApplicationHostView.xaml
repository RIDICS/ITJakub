<Page
    x:Class="ITJakub.MobileApps.Client.MainApp.View.ApplicationHostView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userMenu="using:ITJakub.MobileApps.Client.MainApp.View.Login.UserMenu"
    xmlns:converter="using:ITJakub.MobileApps.Client.Shared.Converter"
    xmlns:converter1="using:ITJakub.MobileApps.Client.MainApp.View.Converter"
    xmlns:template="using:ITJakub.MobileApps.Client.Core.Template"
    xmlns:control="using:ITJakub.MobileApps.Client.MainApp.View.Control"
    DataContext="{Binding ApplicationHostViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <Page.Resources>
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <template:ApplicationTemplateSelector x:Key="ApplicationTemplateSelector" />
        <converter1:MessageCountToNotificationConverter x:Key="MessageCountToNotificationConverter" />
        <converter1:GroupMemberToUserInfoConverter x:Key="GroupMemberToUserInfoConverter" />
        <converter:BooleanNegationConverter x:Key="BooleanNegationConverter" />
    </Page.Resources>

    <Page.TopAppBar>
        <AppBar Visibility="{Binding IsOwnerMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                IsOpen="{Binding IsCommandBarOpen, Mode=TwoWay}" Background="Indigo">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ItemsControl Grid.Column="0"
                              VerticalAlignment="Center"
                              IsEnabled="{Binding IsClosed, Converter={StaticResource BooleanNegationConverter}}"
                              ItemsSource="{Binding ApplicationViewModel.ActionsWithUsers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button IsEnabled="{Binding IsActionPerformed, Converter={StaticResource BooleanNegationConverter}}"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding Command}"
                                    CommandParameter="{Binding ElementName=MembersListView, Path=SelectedItem, Converter={StaticResource GroupMemberToUserInfoConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <ProgressRing IsActive="True"
                                                  Margin="0,0,10,0"
                                                  Visibility="{Binding IsActionPerformed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <TextBlock Text="{Binding Label}" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ListView Grid.Column="1"
                          Margin="20,0,0,0"
                          SelectionMode="Single"
                          ItemsSource="{Binding MemberList}"
                          Style="{StaticResource HorizontalListView}"
                          x:Name="MembersListView">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical"
                                        MinWidth="100"
                                        Margin="0,0,0,10">
                                <Image Width="50"
                                       Height="50"
                                       Source="{Binding UserAvatar}"
                                       HorizontalAlignment="Center" />
                                <TextBlock Text="{Binding FirstName}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="{Binding LastName}"
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </Grid>
        </AppBar>
    </Page.TopAppBar>

    <!--<Page.BottomAppBar>
        <CommandBar IsOpen="{Binding IsCommandBarOpen, Mode=TwoWay}">
            <AppBarToggleButton Icon="Comment"
                                Label="Chat"
                                IsEnabled="{Binding IsChatSupported}"
                                IsChecked="{Binding IsChatDisplayed, Mode=TwoWay}" />
        </CommandBar>
    </Page.BottomAppBar>-->

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Command="{Binding GoBackCommand}"
                    Style="{StaticResource NavigationBackButtonNormalStyle}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    AutomationProperties.Name="Back"
                    AutomationProperties.AutomationId="BackButton"
                    AutomationProperties.ItemType="Navigation Button" />
            <Viewbox StretchDirection="DownOnly" MaxWidth="190" Grid.Column="1">
                <TextBlock Text="{Binding ApplicationName}"
                           Style="{StaticResource HeaderTextBlockStyle}"                           
                           IsHitTestVisible="false"
                           TextWrapping="NoWrap"
                           VerticalAlignment="Center" />
            </Viewbox>

            <ScrollViewer Grid.Column="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollMode="Disabled"
                          ZoomMode="Disabled"
                          Margin="30,0,10,0">

                <TextBlock VerticalAlignment="Center"
                           Margin="0,20,0,10"
                           FontSize="16"
                           TextWrapping="Wrap"
                           FontWeight="Light"
                           Text="{Binding TaskDescription}" />
            </ScrollViewer>

            <userMenu:UserMenu Grid.Column="3"
                               Margin="0,0,30,0" />

            <StackPanel Grid.Column="4" Orientation="Horizontal">
                <AppBarToggleButton Icon="Comment"
                                    Margin="-15,0,-15,0"                                    
                                    IsEnabled="{Binding IsChatSupported}"
                                    IsChecked="{Binding IsChatDisplayed, Mode=TwoWay}" 
                                    Visibility="{Binding IsChatSupported, Converter={StaticResource BooleanToVisibilityConverter}}"/>                
                <AppBarToggleButton Icon="More"
                                    Margin="-15,0,-15,0"             
                                    Visibility="{Binding IsOwnerMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    IsChecked="{Binding IsCommandBarOpen, Mode=TwoWay}" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ContentControl Grid.Column="0"
                            Content="{Binding ApplicationViewModel}"
                            ContentTemplateSelector="{StaticResource ApplicationTemplateSelector}"
                            VerticalContentAlignment="Stretch"
                            HorizontalContentAlignment="Stretch" />

            <Grid Grid.Column="0"
                  Background="#22000000"
                  Visibility="{Binding Waiting, Converter={StaticResource BooleanToVisibilityConverter}}">

                <Grid MinWidth="400"
                      MinHeight="100"
                      Margin="0,0,0,70"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Background="White">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>

                    <ProgressRing Grid.Column="0"
                                  Width="40"
                                  Height="40"
                                  Margin="20"
                                  Foreground="Black"
                                  IsActive="True" />

                    <Grid Grid.Column="1"
                          Background="White"
                          Visibility="{Binding WaitingForData, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock VerticalAlignment="Center"
                                   Text="Stahování uživatelovi historie"
                                   Foreground="Black"
                                   FontSize="30" />
                    </Grid>

                    <Grid Grid.Column="1"
                          Background="White"
                          Visibility="{Binding WaitingForStart, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock VerticalAlignment="Center"
                                   Text="Čekání na spuštění učitelem"
                                   Foreground="Black"
                                   FontSize="30" />
                    </Grid>

                    <Grid Grid.Column="1"
                          Background="White"
                          Visibility="{Binding IsPaused, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock VerticalAlignment="Center"
                                   Text="Pozastaveno"
                                   Foreground="Black"
                                   FontSize="30" />
                    </Grid>
                </Grid>
            </Grid>

            <ContentControl Grid.Column="1"
                            Visibility="{Binding IsChatDisplayed, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Content="{Binding ChatApplicationViewModel}"
                            ContentTemplateSelector="{StaticResource ApplicationTemplateSelector}"
                            VerticalContentAlignment="Stretch"
                            HorizontalContentAlignment="Stretch" />
        </Grid>

        <control:NotificationControl
            Grid.Row="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,30,30"
            Width="250"
            Height="80"
            IsVisible="{Binding IsChatNotificationVisible, Mode=TwoWay}"
            Command="{Binding ShowChatCommand}">

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Upozornění"
                           Foreground="Black"
                           FontWeight="Bold" />
                <TextBlock Text="{Binding UnreadMessageCount, Converter={StaticResource MessageCountToNotificationConverter}}"
                           Foreground="Black"
                           TextWrapping="Wrap" />
            </StackPanel>
        </control:NotificationControl>
    </Grid>
</Page>