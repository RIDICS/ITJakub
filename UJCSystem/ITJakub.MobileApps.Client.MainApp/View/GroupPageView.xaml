<Page
    x:Class="ITJakub.MobileApps.Client.MainApp.View.GroupPageView"
    DataContext="{Binding GroupPageViewModel, Source={StaticResource Locator}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:ITJakub.MobileApps.Client.MainApp.View.Converter"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:converter1="using:ITJakub.MobileApps.Client.Shared.Converter"
    mc:Ignorable="d">

    <Page.Resources>
        <converter:DateTimeToStringConverter x:Key="DateTimeToStringConverter" />
        <converter:NotChosenStringConverter x:Key="NotChosenStringConverter" />
        <converter:ApplicationTypeToNameConverter x:Key="ApplicationTypeToNameConverter" />
        <converter1:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converter1:BooleanNegationConverter x:Key="BooleanNegationConverter" />
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Margin="39,59,39,0"
                    Command="{Binding GoBackCommand}"
                    Style="{StaticResource NavigationBackButtonNormalStyle}"
                    VerticalAlignment="Top"
                    AutomationProperties.Name="Back"
                    AutomationProperties.AutomationId="BackButton"
                    AutomationProperties.ItemType="Navigation Button"
                    IsEnabled="{Binding Saving, Converter={StaticResource BooleanNegationConverter}}" />
            <TextBlock Style="{StaticResource HeaderTextBlockStyle}"
                       Grid.Column="1"
                       IsHitTestVisible="false"
                       TextWrapping="NoWrap"
                       VerticalAlignment="Bottom"
                       Margin="0,0,30,40">
                <Run Text="Skupina:" />
                <Run Text="{Binding GroupInfo.GroupName}" />
            </TextBlock>
            
            <ProgressBar Grid.Column="0"
                         Grid.ColumnSpan="2"
                         VerticalAlignment="Top"
                         Visibility="{Binding Loading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical"
                        Margin="120,0,0,0"
                        Grid.Column="0">
                <TextBlock Style="{StaticResource SubheaderTextBlockStyle}">
                    <Run Text="Kód skupiny:"/>
                    <Run Text="{Binding GroupInfo.GroupCode}"/>
                </TextBlock>

                <TextBlock Style="{StaticResource SubheaderTextBlockStyle}"
                           Margin="0,15,0,0">
                    <Run Text="Čas založení:"/>
                    <Run Text="{Binding GroupInfo.CreateTime, Converter={StaticResource DateTimeToStringConverter}}"/>
                </TextBlock>

                <TextBlock Style="{StaticResource SubheaderTextBlockStyle}"
                           Margin="0,15,0,0">
                    <Run Text="Aplikace:"/>
                    <Run Text="{Binding SelectedApplicationInfo.ApplicationType, Converter={StaticResource ApplicationTypeToNameConverter}}"/>
                </TextBlock>

                <StackPanel Orientation="Horizontal"
                            Margin="0,15,0,15">
                    <TextBlock Style="{StaticResource SubheaderTextBlockStyle}" >
                        <Run Text="Zadání:"/>
                        <Run Text="{Binding SelectedTaskViewModel.Name, Converter={StaticResource NotChosenStringConverter}}"/>
                    </TextBlock>
                    <Button Content="Změnit"
                            Margin="40,0,0,0"
                            IsEnabled="{Binding Saving, Converter={StaticResource BooleanNegationConverter}}"
                            Command="{Binding SelectAppAndTaskCommand}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="100,0,0,0"
                            Visibility="{Binding Saving, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressRing IsActive="True"
                                  Width="30"
                                  Height="30"
                                  Foreground="Gold" />
                    <TextBlock Text="Ukládání"
                               FontSize="20"
                               Margin="5,0,30,0"
                               Foreground="Gold"
                               VerticalAlignment="Center" />
                </StackPanel>
                <TextBlock Text="Uloženo"
                           FontSize="20"
                           Margin="100,0,0,0"
                           Foreground="Gold"
                           Visibility="{Binding TaskSaved, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <ToggleSwitch Header="Stav skupiny"
                              FontSize="20"
                              OnContent="Aktivní"
                              OffContent="Neaktivní"
                              Margin="-7,50,0,0">
                </ToggleSwitch>
            </StackPanel>
            
            
            <Grid Grid.Column="1"
                  Margin="0,0,120,0"
                  DataContext="{Binding GroupInfo}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Style="{StaticResource SubheaderTextBlockStyle}"
                               Grid.Column="0">
                        <Run Text="Seznam členů ("/><Run Text="{Binding MemberCount}"/><Run Text="):" />
                    </TextBlock>

                    <SearchBox Grid.Column="1"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Width="170"
                               Margin="0,0,0,10"
                               SearchHistoryEnabled="False"
                               QueryText="{Binding SearchText, Mode=TwoWay}" >
                        <interactivity:Interaction.Behaviors>
                            <core:EventTriggerBehavior EventName="QueryChanged">
                                <core:InvokeCommandAction Command="{Binding SearchCommand}" />
                            </core:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                    </SearchBox>
                </Grid>
                
                <ListView IsItemClickEnabled="False"
                          SelectionMode="None"
                          Grid.Row="1"
                          ItemsSource="{Binding FilteredMembers}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="30"
                                       Height="30"
                                       Source="{Binding UserAvatar}" />
                                <TextBlock VerticalAlignment="Center"
                                           Margin="5,0,0,0">
                                    <Run Text="{Binding FirstName}"/>
                                    <Run Text="{Binding LastName}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <TextBlock Text="V této skupině nejsou žádní členové."
                           Visibility="{Binding NoMembersVisibility}"
                           Grid.Row="1"
                           FontSize="15"
                           FontWeight="Light"
                           Margin="50,15,0,0" />
            </Grid>
        </Grid>

    </Grid>
</Page>
