<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping assembly="ITJakub.DataEntities" namespace="ITJakub.DataEntities.Database.Entities"
                   xmlns="urn:nhibernate-mapping-2.2">
  <class name="FavoriteBase" table="[Favorites]">

    <id name="Id" column="Id">
      <generator class="identity" />
    </id>

    <discriminator column="FavoriteType"
                   not-null="true"
                   type="System.String" />


    <many-to-one name="User"
                 column="[User]"
                 class="User"
                 lazy="proxy" />

    <subclass
      name="PageBookmark"
      discriminator-value="PageBookmark">

      <property name="PageXmlId" />

      <property name="PagePosition" />

      <many-to-one name="Book"
                   column="BookmarkBook"
                   class="Book"
                   lazy="proxy" />


    </subclass>

    <subclass
      name="FavoriteCategory"
      discriminator-value="FavoriteCategory">

      <many-to-one name="Category"
                   column="FavoriteCategory"
                   class="Category"
                   lazy="proxy" />

    </subclass>

    <subclass
      name="FavoriteBook"
      discriminator-value="FavoriteBook">

      <many-to-one name="Book"
                   column="BookmarkBook"
                   class="Book"
                   lazy="proxy" />

    </subclass>

    <subclass
      name="HeadwordBookmark"
      discriminator-value="HeadwordBookmark">

      <property name="XmlEntryId" />

      <many-to-one name="Book"
                   column="BookmarkBook"
                   class="Book"
                   lazy="proxy" />

    </subclass>
  </class>
</hibernate-mapping>