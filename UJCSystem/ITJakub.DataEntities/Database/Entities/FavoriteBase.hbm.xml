<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="ITJakub.DataEntities" namespace="ITJakub.DataEntities.Database.Entities" xmlns="urn:nhibernate-mapping-2.2">
  <class name="FavoriteBase" table="[FavoriteBase]">
    
    <id name="Id" column="Id">
      <generator class="identity" />
    </id>

    <discriminator column="FavoriteType"
                   not-null="true"/>

    <many-to-one name="User">
      <column name="User" not-null="true"/>
    </many-to-one>
    
    <subclass
      name="PageBookmark"
      discriminator-value="PageBookmark">

      <many-to-one name="BookPage">
        <column name="BookPage"/>
      </many-to-one>
     
    </subclass>
  </class>
</hibernate-mapping>