<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping assembly="ITJakub.DataEntities" namespace="ITJakub.DataEntities.Database.Entities"
                   xmlns="urn:nhibernate-mapping-2.2">
  <class name="BookVersion" table="[BookVersion]" lazy="true">
    <id name="Id" column="Id">
      <generator class="identity" />
    </id>
    
    <many-to-one name="Book" cascade="save-update" lazy="false">
      <column name="Book" sql-type="bigint" not-null="true" />
    </many-to-one>
    
    <many-to-one name="Publisher" cascade="save-update" lazy="false">
      <column name="Publisher" sql-type="int" not-null="false" />
    </many-to-one>

    <property name="VersionId" not-null="true" />

    <property name="Title" />

    <property name="SubTitle" />

    <property name="CreateTime" />

    <property name="Description" />

    <property name="PublishPlace" />

    <property name="PublishDate" />


    <property name="Copyright" />

    <property name="AvailabilityStatus" />

    <property name="BiblText" />

    <property name="NotBefore" />

    <property name="NotAfter" />

    <bag name="ManuscriptDescriptions" cascade="all-delete-orphan" lazy="false">
      <key column="BookVersion" />
      <one-to-many class="ManuscriptDescription" />
    </bag>
    <bag name="Keywords" cascade="all-delete-orphan" lazy="false">
      <key column="BookVersion" />
      <one-to-many class="Keyword" />
    </bag>
    <bag name="BookBibls" cascade="all-delete-orphan" lazy="false">
      <key column="BookVersion" />
      <one-to-many class="BookBibl" />
    </bag>
    <bag name="BookPages" cascade="all-delete-orphan" lazy="false" fetch="select">
      <key column="BookVersion" />
      <one-to-many class="BookPage" />
    </bag>
    <bag name="Authors" table="BookVersion_Author" cascade="save-update" lazy="false">
      <key column="BookVersion" />
      <many-to-many class="Author" column="Author" />
    </bag>
    <bag name="Responsibles" table="BookVersion_Responsible" cascade="save-update" lazy="false">
      <key column="BookVersion" />
      <many-to-many class="Responsible" column="Responsible" />
    </bag>
    <bag name="Transformations" table="BookVersion_Transformation" cascade="all-delete-orphan" lazy="true">
      <key column="BookVersion" />
      <many-to-many class="Transformation" column="Transformation" />
    </bag>


  </class>
</hibernate-mapping>