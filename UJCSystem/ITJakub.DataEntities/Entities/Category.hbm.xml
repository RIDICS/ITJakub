<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="ITJakub.DataEntities" namespace="ITJakub.DataEntities.Entities" xmlns="urn:nhibernate-mapping-2.2">
  <class name="Category" table="Category" lazy="true" >
    <id name="Id" column="Id">
      <generator class="identity" />
    </id>
    <many-to-one name="ParentCategory">
      <column name="ParentCategory" sql-type="int" not-null="false" />
    </many-to-one>
    <property name="Name">
      <column name="Name" sql-type="varchar" not-null="true" />
    </property>
    <bag name="Books" inverse="true">
      <key column="Category" />
      <one-to-many class="Book" />
    </bag>
  </class>
</hibernate-mapping>