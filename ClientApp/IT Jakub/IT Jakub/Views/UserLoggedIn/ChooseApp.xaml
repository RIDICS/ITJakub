<Page
    xmlns:common="using:IT_Jakub.Common"
    x:Class="IT_Jakub.Views.UserLoggedIn.ChooseApp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IT_Jakub.Views.UserLoggedIn"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationBackground}">
        <Button x:Name="SynchronizedReadingButton" AutomationProperties.Name="Synchronizované čtení"  HorizontalAlignment="Left" Height="190" Margin="195,143,0,0" VerticalAlignment="Top" Width="190" Click="SynchronizedReadingButton_Click" Style="{StaticResource ApplicationButtonStyle}">
            <Image Source="ms-appx:///Assets/Icons/white/literature-64.png" Stretch="None" />
        </Button>
        <Button x:Name="CrosswordsButton" AutomationProperties.Name="Křížovky"  HorizontalAlignment="Left" Height="190" Margin="464,143,0,0" VerticalAlignment="Top" Width="190" Style="{StaticResource ApplicationButtonStyle}" Click="CrosswordsButton_Click">
            <Image Source="ms-appx:///Assets/Icons/white/crossword-64.png" Stretch="None" />
        </Button>
    </Grid>
</Page>