<Page
    x:Class="IT_Jakub.Views.UserLoggedIn.UserLoggedIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IT_Jakub.Views.UserLoggedIn"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationBackground}">
        <Grid Style="{StaticResource MenuGridStyle}">
            <StackPanel>
                <Button x:Name="showSessionsList" Content="Zobrazit seznam sezení" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="showSessionsList_Click"/>
                <Button x:Name="joinSession" Content="Připojit k sezení" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <Button x:Name="createSession" Content="Vytvořit sezení" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </StackPanel>
        </Grid>

    </Grid>
</Page>