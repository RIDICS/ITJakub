<Page
    x:Class="IT_Jakub.Views.EducationalApplications.SynchronizedReading.SyncReadingApp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IT_Jakub.Views.EducationalApplications.SynchronizedReading"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="mainGrid" Background="{StaticResource ApplicationPageBackgroundThemeBrush}" Loaded="mainGrid_Loaded">
        <Canvas HorizontalAlignment="Left" Height="768" VerticalAlignment="Top" Width="1366">
            <Button x:Name="openFileButton" Content="Otevřít soubor" HorizontalAlignment="Left" Height="46" Margin="46,624,0,0" VerticalAlignment="Top" Width="249" Click="openFileButton_Click" IsEnabled="False"/>
            <Button x:Name="highligtTextButton" Content="Označit text" HorizontalAlignment="Left" Margin="313,624,0,0" VerticalAlignment="Top" Click="highligtTextButton_Click" IsEnabled="False"/>
            <Popup x:Name="openPopup">
                <Grid Background="#FFBBBBBB" Margin="62,167,310,299" Width="1000" Height="276">
                    <TextBox x:Name="uriTextBox" HorizontalAlignment="Left" Margin="50,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="29" Width="907"/>
                    <Button x:Name="openButton" Content="Otevřít" HorizontalAlignment="Left" Margin="50,188,0,0" VerticalAlignment="Top" Foreground="Black" BorderBrush="Black" Click="openButton_Click"/>
                    <Button x:Name="cancelButton" Content="Storno" HorizontalAlignment="Left" Margin="150,188,0,0" VerticalAlignment="Top" BorderBrush="Black" Foreground="Black" Click="cancelButton_Click"/>
                    <TextBlock x:Name="uriLabel" HorizontalAlignment="Left" Margin="50,88,0,0" TextWrapping="Wrap" Text="Adresa souboru" VerticalAlignment="Top" Foreground="Black"/>
                </Grid>
            </Popup>
            <Button x:Name="autoUpdateButton" Content="ON" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="89" BorderBrush="#FF1A7A1A" Foreground="Black" Background="Lime" Click="autoUpdateButton_Click" Canvas.Left="947" Canvas.Top="624"/>
            <RichEditBox x:Name="textRichEditBox" HorizontalAlignment="Left" Height="559" VerticalAlignment="Top" Width="1026" IsReadOnly="True" IsSpellCheckEnabled="False" IsTextPredictionEnabled="False" ScrollViewer.HorizontalScrollBarVisibility="Auto" Margin="10,10,0,0"/>
            <Image x:Name="pointer" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="70" Source="ms-appx:///Assets/pointer.png" ManipulationMode="None" ManipulationDelta="pointer_ManipulationDelta" ManipulationStarting="pointer_ManipulationStarting" ManipulationCompleted="pointer_ManipulationCompleted" Canvas.Left="10" Canvas.Top="10"/>
            <ListView x:Name="userList" Height="559" Canvas.Left="1045" Canvas.Top="10" Width="311" SelectionChanged="userList_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>

                        <Grid Height="50" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="10,0,0,0">
                                <TextBlock Text="{Binding Id}" Style="{StaticResource TitleTextStyle}" TextWrapping="NoWrap"/>
                                <TextBlock Text="{Binding Username}" Style="{StaticResource CaptionTextStyle}" TextWrapping="NoWrap"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" VerticalAlignment="Top" Margin="10,0,0,0">
                                <TextBlock Text="{Binding FirstName}" Style="{StaticResource BodyTextStyle}" MaxHeight="60"/>
                                <TextBlock Text="{Binding LastName}" Style="{StaticResource BodyTextStyle}" MaxHeight="60"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="updateUserListButton" Content="Obnovit seznam uživatelů" Height="38" Canvas.Left="648" Canvas.Top="624" Width="213" Click="updateUserListButton_Click"/>
            <Popup/>
            <Grid x:Name="userMenuLayout" Background="#FFE5E5E5" Canvas.Left="985" Canvas.Top="100" Width="200" Height="200" Visibility="Collapsed"/>
        </Canvas>

    </Grid>
</Page>