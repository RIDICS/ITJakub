<UserControl
    x:Class="IT_Jakub.Views.Controls.CrossWord.Hint"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IT_Jakub.Views.Controls.CrossWord"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="40"
    d:DesignWidth="40">
    <UserControl.Resources>
        <ControlTemplate x:Key="ButtonControlTemplate1" TargetType="Button">
            <Border BorderBrush="{StaticResource AppBarItemNormalBackgroundThemeBrush}" BorderThickness="1" Background="{StaticResource AppBarItemDisabledForegroundThemeBrush}" Width="40" Height="40">
                <ContentPresenter x:Name="Content" HorizontalAlignment="Center" Margin="-1,-1,0,0" VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>
            
    </UserControl.Resources>
    <Grid>
        <Button x:Name="hint" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="hint_Click" Template="{StaticResource ButtonControlTemplate1}">
            <Image Source="ms-appx:///Assets/Icons/white/help-32.png" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="None" />
        </Button>
    </Grid>
</UserControl>
