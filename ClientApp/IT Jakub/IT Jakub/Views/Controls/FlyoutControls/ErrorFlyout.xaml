<UserControl
    x:Class="IT_Jakub.Views.Controls.FlyoutControls.ErrorFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IT_Jakub.Views.Controls.FlyoutControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="400">
    
    <Grid Background="{StaticResource AppBarBackgroundThemeBrush}">
        <Image Width="32" Height="32" Source="ms-appx:///Assets/Icons/white/error-32.png" Stretch="None" Margin="10,10,358,158" />
        <TextBlock x:Name="heading" HorizontalAlignment="Left" Margin="47,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="343" Height="32" FontSize="25"/>
        <TextBlock x:Name="message" HorizontalAlignment="Left" Height="93" Margin="47,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="343"/>
        <Button x:Name="close" Content="Zavřít" Width="100" HorizontalAlignment="Left" Margin="150,145,0,0" VerticalAlignment="Top" Click="close_Click"/>
    </Grid>
</UserControl>
