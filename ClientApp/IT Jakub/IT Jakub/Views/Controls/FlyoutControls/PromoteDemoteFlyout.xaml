<UserControl
    x:Class="IT_Jakub.Views.Controls.FlyoutControls.PromoteDemoteFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IT_Jakub.Views.Controls.FlyoutControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="90"
    d:DesignWidth="200">
    
    <Grid Background="{StaticResource ApplicationBackground}">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="promote" AutomationProperties.Name="Zvýšit práva" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource AppBarButtonStyle}" Click="promote_Click">
                <Image Source="ms-appx:///Assets/Icons/white/moderator-32.png" Stretch="Fill" Height="25" Width="25"/>
            </Button>
            <Button x:Name="demote" AutomationProperties.Name="Snížit práva" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource AppBarButtonStyle}" Click="demote_Click">
                <Image Source="ms-appx:///Assets/Icons/white/user-32.png" Stretch="Fill" Height="25" Width="25"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
